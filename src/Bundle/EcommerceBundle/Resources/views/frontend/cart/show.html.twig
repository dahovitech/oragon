{% extends 'frontend/base.html.twig' %}

{% block title %}Shopping Cart{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Shopping Cart</h1>

            {% if cart.items|length > 0 %}
                <!-- Stock Errors -->
                {% if stock_errors|length > 0 %}
                    <div class="alert alert-warning">
                        <h5><i class="fas fa-exclamation-triangle me-2"></i>Stock Issues</h5>
                        <ul class="mb-0">
                            {% for error in stock_errors %}
                                <li>{{ error }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                <div class="row">
                    <!-- Cart Items -->
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Cart Items ({{ cart.itemsCount }})</h5>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Product</th>
                                                <th width="120">Quantity</th>
                                                <th width="100">Price</th>
                                                <th width="100">Total</th>
                                                <th width="50"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for item in cart.items %}
                                                <tr class="cart-item" data-item-id="{{ item.id }}">
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            {% if item.product.featuredImage %}
                                                                <img src="{{ item.product.featuredImage.path }}" class="me-3 rounded" alt="{{ item.displayName }}" style="width: 60px; height: 60px; object-fit: cover;">
                                                            {% else %}
                                                                <div class="me-3 rounded bg-light d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                                    <i class="fas fa-image text-muted"></i>
                                                                </div>
                                                            {% endif %}
                                                            <div>
                                                                <h6 class="mb-1">
                                                                    <a href="{{ path('ecommerce_product_show', {slug: item.product.slug}) }}" class="text-decoration-none">
                                                                        {{ item.displayName }}
                                                                    </a>
                                                                </h6>
                                                                <small class="text-muted">SKU: {{ item.variant ? item.variant.sku : item.product.sku }}</small>
                                                                
                                                                {% if item.customOptions %}
                                                                    <div class="small text-muted">
                                                                        {% for key, value in item.customOptions %}
                                                                            <div>{{ key }}: {{ value }}</div>
                                                                        {% endfor %}
                                                                    </div>
                                                                {% endif %}

                                                                <!-- Stock Warning -->
                                                                {% if not item.hasEnoughStock %}
                                                                    <div class="small text-danger">
                                                                        <i class="fas fa-exclamation-triangle me-1"></i>
                                                                        Only {{ item.effectiveStock }} available
                                                                    </div>
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="input-group input-group-sm">
                                                            <button class="btn btn-outline-secondary quantity-btn" type="button" onclick="updateQuantity({{ item.id }}, {{ item.quantity - 1 }})">-</button>
                                                            <input type="number" class="form-control text-center quantity-input" value="{{ item.quantity }}" min="1" max="{{ item.effectiveStock }}" data-item-id="{{ item.id }}">
                                                            <button class="btn btn-outline-secondary quantity-btn" type="button" onclick="updateQuantity({{ item.id }}, {{ item.quantity + 1 }})">+</button>
                                                        </div>
                                                    </td>
                                                    <td class="fw-bold">€{{ item.unitPrice }}</td>
                                                    <td class="fw-bold item-total">€{{ item.lineTotal }}</td>
                                                    <td>
                                                        <button class="btn btn-sm btn-outline-danger" onclick="removeItem({{ item.id }})" title="Remove item">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Continue Shopping -->
                        <div class="mt-3">
                            <a href="{{ path('ecommerce_product_list') }}" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                            </a>
                            <button class="btn btn-outline-secondary ms-2" onclick="clearCart()">
                                <i class="fas fa-trash me-2"></i>Clear Cart
                            </button>
                        </div>
                    </div>

                    <!-- Cart Summary -->
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Order Summary</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Subtotal:</span>
                                    <span class="cart-subtotal">€{{ cart.subtotal }}</span>
                                </div>
                                
                                {% if cart.discountAmount and cart.discountAmount != '0.00' %}
                                    <div class="d-flex justify-content-between mb-2 text-success">
                                        <span>
                                            Discount
                                            {% if cart.couponCode %}
                                                ({{ cart.couponCode }})
                                            {% endif %}:
                                        </span>
                                        <span>-€{{ cart.discountAmount }}</span>
                                    </div>
                                {% endif %}
                                
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Shipping:</span>
                                    <span class="cart-shipping">
                                        {% if cart.shippingCost == '0.00' %}
                                            Free
                                        {% else %}
                                            €{{ cart.shippingCost }}
                                        {% endif %}
                                    </span>
                                </div>
                                
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Tax:</span>
                                    <span class="cart-tax">€{{ cart.taxAmount }}</span>
                                </div>
                                
                                <hr>
                                
                                <div class="d-flex justify-content-between mb-3">
                                    <strong>Total:</strong>
                                    <strong class="text-primary cart-total">€{{ cart.total }}</strong>
                                </div>

                                <!-- Coupon Code -->
                                <div class="mb-3">
                                    {% if cart.couponCode %}
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="badge bg-success">{{ cart.couponCode }}</span>
                                            <button class="btn btn-sm btn-outline-secondary" onclick="removeCoupon()">Remove</button>
                                        </div>
                                    {% else %}
                                        <form id="couponForm" onsubmit="applyCoupon(event)">
                                            <div class="input-group">
                                                <input type="text" class="form-control" name="coupon_code" placeholder="Coupon code" required>
                                                <button class="btn btn-outline-secondary" type="submit">Apply</button>
                                            </div>
                                        </form>
                                    {% endif %}
                                </div>

                                <!-- Checkout Button -->
                                <div class="d-grid">
                                    <a href="{{ path('ecommerce_checkout_index') }}" class="btn btn-primary btn-lg">
                                        <i class="fas fa-credit-card me-2"></i>Proceed to Checkout
                                    </a>
                                </div>

                                <!-- Security Info -->
                                <div class="text-center mt-3">
                                    <small class="text-muted">
                                        <i class="fas fa-lock me-1"></i>
                                        Secure checkout with SSL encryption
                                    </small>
                                </div>
                            </div>
                        </div>

                        <!-- Estimated Delivery -->
                        <div class="card mt-3">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="fas fa-truck me-2"></i>Estimated Delivery
                                </h6>
                                <p class="card-text small text-muted mb-0">
                                    Standard delivery: 3-5 business days<br>
                                    Express delivery: 1-2 business days (additional charges apply)
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

            {% else %}
                <!-- Empty Cart -->
                <div class="text-center py-5">
                    <i class="fas fa-shopping-cart fa-5x text-muted mb-3"></i>
                    <h3>Your cart is empty</h3>
                    <p class="text-muted">Start shopping to add items to your cart.</p>
                    <a href="{{ path('ecommerce_product_list') }}" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-2"></i>Start Shopping
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
// Update item quantity
function updateQuantity(itemId, quantity) {
    if (quantity < 1) return;
    
    const formData = new FormData();
    formData.append('quantity', quantity);
    
    fetch(`{{ path('ecommerce_cart_update_item', {id: '__ID__'}) }}`.replace('__ID__', itemId), {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Update quantity input
            document.querySelector(`input[data-item-id="${itemId}"]`).value = data.item.quantity;
            // Update line total
            document.querySelector(`tr[data-item-id="${itemId}"] .item-total`).textContent = '€' + data.item.line_total;
            // Update cart totals
            updateCartTotals(data.cart);
            showAlert('success', data.message);
        } else {
            showAlert('danger', data.message);
        }
    })
    .catch(error => {
        showAlert('danger', 'An error occurred. Please try again.');
    });
}

// Remove item from cart
function removeItem(itemId) {
    if (!confirm('Are you sure you want to remove this item from your cart?')) {
        return;
    }
    
    fetch(`{{ path('ecommerce_cart_remove_item', {id: '__ID__'}) }}`.replace('__ID__', itemId), {
        method: 'POST'
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Remove item row
            document.querySelector(`tr[data-item-id="${itemId}"]`).remove();
            // Update cart totals
            updateCartTotals(data.cart);
            showAlert('success', data.message);
            
            // Reload page if cart is empty
            if (data.cart.items_count === 0) {
                location.reload();
            }
        } else {
            showAlert('danger', data.message);
        }
    })
    .catch(error => {
        showAlert('danger', 'An error occurred. Please try again.');
    });
}

// Clear entire cart
function clearCart() {
    if (!confirm('Are you sure you want to clear your entire cart?')) {
        return;
    }
    
    fetch('{{ path('ecommerce_cart_clear') }}', {
        method: 'POST'
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            showAlert('danger', data.message);
        }
    })
    .catch(error => {
        showAlert('danger', 'An error occurred. Please try again.');
    });
}

// Apply coupon
function applyCoupon(event) {
    event.preventDefault();
    
    const formData = new FormData(event.target);
    
    fetch('{{ path('ecommerce_cart_apply_coupon') }}', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            showAlert('danger', data.message);
        }
    })
    .catch(error => {
        showAlert('danger', 'An error occurred. Please try again.');
    });
}

// Remove coupon
function removeCoupon() {
    fetch('{{ path('ecommerce_cart_remove_coupon') }}', {
        method: 'POST'
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            showAlert('danger', data.message);
        }
    })
    .catch(error => {
        showAlert('danger', 'An error occurred. Please try again.');
    });
}

// Update cart totals in UI
function updateCartTotals(cart) {
    document.querySelector('.cart-subtotal').textContent = '€' + cart.subtotal;
    document.querySelector('.cart-total').textContent = '€' + cart.total;
    
    // Update navigation cart count
    const cartCountElement = document.getElementById('cart-count');
    if (cartCountElement) {
        cartCountElement.textContent = cart.total_quantity;
    }
}

// Show alert messages
function showAlert(type, message) {
    const alertDiv = document.createElement('div');
    alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
    alertDiv.style.top = '20px';
    alertDiv.style.right = '20px';
    alertDiv.style.zIndex = '9999';
    alertDiv.innerHTML = `
        ${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    `;
    document.body.appendChild(alertDiv);
    
    setTimeout(() => {
        alertDiv.remove();
    }, 5000);
}

// Handle quantity input changes
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.quantity-input').forEach(input => {
        input.addEventListener('change', function() {
            const itemId = this.getAttribute('data-item-id');
            const quantity = parseInt(this.value);
            updateQuantity(itemId, quantity);
        });
    });
});
</script>
{% endblock %}