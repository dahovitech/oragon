# Notification & Email Configuration
MAILER_DSN=smtp://localhost:1025
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="Notre Plateforme"

# For production, use appropriate SMTP settings:
# MAILER_DSN=smtp://username:password@smtp.gmail.com:587
# MAILER_DSN=smtp://username:password@smtp.mailtrap.io:2525

# Notification settings
NOTIFICATION_DEFAULT_FROM_EMAIL="${MAIL_FROM_ADDRESS}"
NOTIFICATION_DEFAULT_FROM_NAME="${MAIL_FROM_NAME}"

# Site information for templates
SITE_NAME="Notre Plateforme"
SITE_URL="https://example.com"

# Security Configuration
APP_ENV=prod
APP_DEBUG=false
APP_SECRET=your-super-secret-key-change-this-in-production

# Cache & Redis Configuration
REDIS_URL=redis://localhost:6379
CACHE_ADAPTER=cache.adapter.redis

# Security Settings
SECURITY_CSRF_PROTECTION=true
SECURITY_2FA_ENABLED=true
SECURITY_RATE_LIMITING=true

# Performance Settings
OPCACHE_ENABLE=1
SESSION_LIFETIME=86400

# Database Configuration
DATABASE_URL="mysql://username:password@127.0.0.1:3306/oragon_db?serverVersion=8.0&charset=utf8mb4"

# Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn
# MONITORING_ENABLED=true