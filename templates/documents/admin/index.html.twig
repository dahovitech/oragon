{% extends 'base.html.twig' %}

{% block title %}Administration - Documents - EdgeLoan{% endblock %}

{% block page_header %}
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="page-title">üõ†Ô∏è Administration - Documents KYC</h1>
                <div class="page-subtitle">Gestion et v√©rification des documents utilisateurs</div>
            </div>
            <div class="col-auto">
                <div class="btn-group" role="group">
                    <a href="{{ path('app_documents_admin_all') }}" class="btn btn-outline-primary">
                        <i class="fas fa-list"></i> Tous les documents
                    </a>
                    <a href="{{ path('app_documents_admin_stats') }}" class="btn btn-outline-info">
                        <i class="fas fa-chart-bar"></i> Statistiques
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
<div class="container-xl">
    
    {# Statistiques rapides #}
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="subheader">Documents en attente</div>
                        <div class="ms-auto lh-1">
                            <div class="dropdown">
                                <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-clock text-warning"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="h1 mb-3">{{ stats.pending ?? 0 }}</div>
                    <div class="d-flex mb-2">
                        <div>N√©cessitent une v√©rification</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="subheader">Documents approuv√©s</div>
                        <div class="ms-auto lh-1">
                            <i class="fas fa-check-circle text-success"></i>
                        </div>
                    </div>
                    <div class="h1 mb-3">{{ stats.approved ?? 0 }}</div>
                    <div class="d-flex mb-2">
                        <div>V√©rifi√©s et approuv√©s</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="subheader">Documents rejet√©s</div>
                        <div class="ms-auto lh-1">
                            <i class="fas fa-times-circle text-danger"></i>
                        </div>
                    </div>
                    <div class="h1 mb-3">{{ stats.rejected ?? 0 }}</div>
                    <div class="d-flex mb-2">
                        <div>Non conformes</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="subheader">Total documents</div>
                        <div class="ms-auto lh-1">
                            <i class="fas fa-file-alt text-info"></i>
                        </div>
                    </div>
                    <div class="h1 mb-3">{{ stats.total ?? 0 }}</div>
                    <div class="d-flex mb-2">
                        <div>Tous statuts confondus</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Documents en attente de v√©rification #}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">‚è≥ Documents en Attente de V√©rification</h3>
                    <div class="card-actions">
                        <span class="badge bg-warning">{{ pending_documents|length }} documents</span>
                    </div>
                </div>
                <div class="card-body">
                    {% if pending_documents %}
                        <div class="table-responsive">
                            <table class="table table-vcenter">
                                <thead>
                                    <tr>
                                        <th>Utilisateur</th>
                                        <th>Document</th>
                                        <th>Type</th>
                                        <th>Date d'upload</th>
                                        <th>Taille</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for document in pending_documents %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="avatar avatar-sm me-2 rounded" style="background-image: url({{ asset('img/default-avatar.png') }})"></span>
                                                <div>
                                                    <div class="font-weight-medium">
                                                        {{ document.user.firstName }} {{ document.user.lastName }}
                                                    </div>
                                                    <div class="text-muted small">{{ document.user.email }}</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-file-pdf text-danger me-2"></i>
                                                {{ document.name }}
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-light text-dark">
                                                {{ document.typeLabel }}
                                            </span>
                                        </td>
                                        <td>
                                            {{ document.uploadedAt|date('d/m/Y H:i') }}
                                            {% set days_ago = date().diff(document.uploadedAt).days %}
                                            {% if days_ago > 2 %}
                                                <span class="badge bg-danger ms-1">{{ days_ago }}j</span>
                                            {% elseif days_ago > 0 %}
                                                <span class="badge bg-warning ms-1">{{ days_ago }}j</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if document.fileSize %}
                                                {{ (document.fileSize / 1024 / 1024)|number_format(2) }} MB
                                            {% else %}
                                                -
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="{{ path('app_documents_view', {id: document.id}) }}" 
                                                   class="btn btn-outline-info"
                                                   title="Visualiser">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{{ path('app_documents_admin_verify', {id: document.id}) }}" 
                                                   class="btn btn-outline-primary"
                                                   title="V√©rifier">
                                                    <i class="fas fa-check"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        
                        {% if pending_documents|length > 10 %}
                        <div class="mt-3 text-center">
                            <a href="{{ path('app_documents_admin_all', {status: 'pending'}) }}" class="btn btn-outline-primary">
                                Voir tous les documents en attente
                            </a>
                        </div>
                        {% endif %}
                        
                    {% else %}
                        <div class="empty">
                            <div class="empty-img">
                                <i class="fas fa-check-circle fa-5x text-success"></i>
                            </div>
                            <p class="empty-title">Aucun document en attente</p>
                            <p class="empty-subtitle text-muted">
                                Tous les documents ont √©t√© v√©rifi√©s. Excellent travail !
                            </p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
    // Auto-refresh de la page toutes les 5 minutes pour les documents en attente
    setTimeout(function() {
        location.reload();
    }, 300000); // 5 minutes
    </script>
{% endblock %}