{% extends 'frontend/base.html.twig' %}

{% block title %}Contrat #{{ contract.contractNumber }} - EdgeLoan{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .contract-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 10px;
            padding: 2rem;
            margin-bottom: 2rem;
        }
        .stat-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: transform 0.2s ease;
        }
        .stat-card:hover {
            transform: translateY(-2px);
        }
        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
        }
        .contract-timeline {
            position: relative;
            padding-left: 2rem;
        }
        .contract-timeline::before {
            content: '';
            position: absolute;
            left: 15px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #e9ecef;
        }
        .timeline-item {
            position: relative;
            padding-bottom: 2rem;
        }
        .timeline-item::before {
            content: '';
            position: absolute;
            left: -1.5rem;
            top: 0.5rem;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #007bff;
        }
        .timeline-item.completed::before {
            background: #28a745;
        }
        .timeline-item.pending::before {
            background: #ffc107;
        }
        .contract-actions {
            position: sticky;
            top: 2rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="page-content">
    <!-- Header -->
    <section class="page-header page-header-modern page-header-sm">
        <div class="container">
            <div class="row">
                <div class="col-md-8 align-self-center p-static order-2">
                    <h1 class="text-dark font-weight-bold text-7">Contrat de Prêt</h1>
                    <span class="sub-title text-dark">{{ contract.loanApplication.loanType.name }}</span>
                </div>
                <div class="col-md-4 text-end order-1">
                    <a href="{{ path('app_contracts_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour aux contrats
                    </a>
                </div>
            </div>
        </div>
    </section>

    <div class="container py-5">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
        
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        <!-- En-tête du contrat -->
        <div class="contract-header">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h2 class="mb-2">Contrat #{{ contract.contractNumber }}</h2>
                    <p class="mb-3">{{ contract.loanApplication.loanType.name }}</p>
                    <div class="row">
                        <div class="col-md-3">
                            <small class="opacity-75">Montant emprunté</small>
                            <div class="h4">{{ contract.originalAmount|number_format(0, ',', ' ') }}€</div>
                        </div>
                        <div class="col-md-3">
                            <small class="opacity-75">Taux d'intérêt</small>
                            <div class="h4">{{ contract.interestRate }}%</div>
                        </div>
                        <div class="col-md-3">
                            <small class="opacity-75">Durée</small>
                            <div class="h4">{{ contract.duration }} mois</div>
                        </div>
                        <div class="col-md-3">
                            <small class="opacity-75">Mensualité</small>
                            <div class="h4">{{ contract.monthlyPayment|number_format(2, ',', ' ') }}€</div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 text-center">
                    {% if not contract.isSigned %}
                        <span class="badge bg-warning p-3 h5 mb-0">En attente de signature</span>
                    {% elseif contract.isActive %}
                        <span class="badge bg-success p-3 h5 mb-0">Contrat actif</span>
                    {% else %}
                        <span class="badge bg-secondary p-3 h5 mb-0">Contrat terminé</span>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <!-- Statistiques -->
                {% if contract.isSigned %}
                    <div class="row mb-4">
                        <div class="col-md-3 mb-3">
                            <div class="card stat-card h-100">
                                <div class="card-body text-center">
                                    <div class="stat-icon bg-success text-white mx-auto mb-2">
                                        <i class="fas fa-check"></i>
                                    </div>
                                    <h5 class="card-title">{{ stats.paidPayments }}</h5>
                                    <p class="card-text text-muted">Paiements effectués</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card stat-card h-100">
                                <div class="card-body text-center">
                                    <div class="stat-icon bg-info text-white mx-auto mb-2">
                                        <i class="fas fa-calendar"></i>
                                    </div>
                                    <h5 class="card-title">{{ stats.totalPayments - stats.paidPayments }}</h5>
                                    <p class="card-text text-muted">Paiements restants</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card stat-card h-100">
                                <div class="card-body text-center">
                                    <div class="stat-icon bg-primary text-white mx-auto mb-2">
                                        <i class="fas fa-euro-sign"></i>
                                    </div>
                                    <h5 class="card-title">{{ stats.totalPaid|number_format(0, ',', ' ') }}€</h5>
                                    <p class="card-text text-muted">Total payé</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card stat-card h-100">
                                <div class="card-body text-center">
                                    <div class="stat-icon bg-warning text-white mx-auto mb-2">
                                        <i class="fas fa-hourglass-half"></i>
                                    </div>
                                    <h5 class="card-title">{{ stats.remainingBalance|number_format(0, ',', ' ') }}€</h5>
                                    <p class="card-text text-muted">Capital restant</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Prochain paiement -->
                    {% if stats.nextPaymentDue %}
                        <div class="card mb-4">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Prochain paiement</h5>
                            </div>
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <h4 class="text-primary">{{ stats.nextPaymentDue.amount|number_format(2, ',', ' ') }}€</h4>
                                        <p class="text-muted mb-0">
                                            Échéance du {{ stats.nextPaymentDue.dueDate|date('d/m/Y') }}
                                            {% if stats.nextPaymentDue.isOverdue %}
                                                <span class="badge bg-danger ms-2">En retard</span>
                                            {% elseif stats.nextPaymentDue.isDue %}
                                                <span class="badge bg-warning ms-2">À payer maintenant</span>
                                            {% endif %}
                                        </p>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <a href="#" class="btn btn-primary">
                                            <i class="fas fa-credit-card me-2"></i>Payer
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    <!-- Progression du remboursement -->
                    {% set completion = contract.completionPercentage %}
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Progression du remboursement</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span>{{ completion|round(1) }}% remboursé</span>
                                <span>{{ stats.totalPaid|number_format(0, ',', ' ') }}€ / {{ contract.originalAmount|number_format(0, ',', ' ') }}€</span>
                            </div>
                            <div class="progress mb-3" style="height: 20px;">
                                <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" 
                                     role="progressbar" style="width: {{ completion }}%">
                                    {{ completion|round(1) }}%
                                </div>
                            </div>
                            <div class="row text-center">
                                <div class="col-4">
                                    <small class="text-muted">Début</small>
                                    <div>{{ contract.signedAt|date('m/Y') }}</div>
                                </div>
                                <div class="col-4">
                                    <small class="text-muted">Aujourd'hui</small>
                                    <div>{{ "now"|date('m/Y') }}</div>
                                </div>
                                <div class="col-4">
                                    <small class="text-muted">Fin prévue</small>
                                    <div>{{ contract.endDate|date('m/Y') }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}

                <!-- Informations contractuelles -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-file-contract me-2"></i>Informations contractuelles</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <table class="table table-borderless">
                                    <tr>
                                        <td class="text-muted">Numéro de contrat :</td>
                                        <td class="fw-bold">{{ contract.contractNumber }}</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">Type de prêt :</td>
                                        <td>{{ contract.loanApplication.loanType.name }}</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">Montant emprunté :</td>
                                        <td class="fw-bold">{{ contract.originalAmount|number_format(0, ',', ' ') }}€</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">Taux d'intérêt :</td>
                                        <td>{{ contract.interestRate }}% (TAEG: {{ contract.taeg }}%)</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">Durée :</td>
                                        <td>{{ contract.duration }} mois</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <table class="table table-borderless">
                                    <tr>
                                        <td class="text-muted">Date de génération :</td>
                                        <td>{{ contract.createdAt|date('d/m/Y à H:i') }}</td>
                                    </tr>
                                    {% if contract.isSigned %}
                                        <tr>
                                            <td class="text-muted">Date de signature :</td>
                                            <td>{{ contract.signedAt|date('d/m/Y à H:i') }}</td>
                                        </tr>
                                        <tr>
                                            <td class="text-muted">Date de début :</td>
                                            <td>{{ contract.startDate|date('d/m/Y') }}</td>
                                        </tr>
                                        <tr>
                                            <td class="text-muted">Date de fin prévue :</td>
                                            <td>{{ contract.endDate|date('d/m/Y') }}</td>
                                        </tr>
                                    {% endif %}
                                    <tr>
                                        <td class="text-muted">Mensualité :</td>
                                        <td class="fw-bold">{{ contract.monthlyPayment|number_format(2, ',', ' ') }}€</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Actions -->
                <div class="contract-actions">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>Actions</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                {% if not contract.isSigned %}
                                    <a href="{{ path('app_contracts_sign', {'id': contract.id}) }}" 
                                       class="btn btn-primary">
                                        <i class="fas fa-pen me-2"></i>Signer le contrat
                                    </a>
                                    <button onclick="regenerateContract({{ contract.id }})" 
                                            class="btn btn-outline-warning">
                                        <i class="fas fa-sync me-2"></i>Régénérer le contrat
                                    </button>
                                {% else %}
                                    <a href="{{ path('app_contracts_download', {'id': contract.id}) }}" 
                                       class="btn btn-primary">
                                        <i class="fas fa-download me-2"></i>Télécharger PDF
                                    </a>
                                    <a href="{{ path('app_contracts_payment_schedule', {'id': contract.id}) }}" 
                                       class="btn btn-outline-info">
                                        <i class="fas fa-calendar-alt me-2"></i>Voir l'échéancier
                                    </a>
                                    <a href="{{ path('app_contracts_payment_history', {'id': contract.id}) }}" 
                                       class="btn btn-outline-success">
                                        <i class="fas fa-history me-2"></i>Historique des paiements
                                    </a>
                                    {% if contract.isActive %}
                                        <a href="{{ path('app_contracts_early_repayment', {'id': contract.id}) }}" 
                                           class="btn btn-outline-warning">
                                            <i class="fas fa-fast-forward me-2"></i>Remboursement anticipé
                                        </a>
                                    {% endif %}
                                    {% if not contract.isActive %}
                                        <a href="{{ path('app_contracts_certificate', {'id': contract.id}) }}" 
                                           class="btn btn-outline-secondary">
                                            <i class="fas fa-certificate me-2"></i>Attestation de fin de prêt
                                        </a>
                                    {% endif %}
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    {% if contract.isSigned %}
                        <!-- Simulateur de remboursement anticipé -->
                        <div class="card mt-3">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-calculator me-2"></i>Simulateur</h6>
                            </div>
                            <div class="card-body">
                                <label class="form-label">Date de remboursement :</label>
                                <input type="date" class="form-control mb-3" id="repaymentDate" 
                                       value="{{ "now"|date('Y-m-d') }}" 
                                       min="{{ "now"|date('Y-m-d') }}">
                                <button onclick="simulateRepayment()" class="btn btn-outline-primary btn-sm w-100">
                                    Calculer
                                </button>
                                <div id="simulationResult" class="mt-3"></div>
                            </div>
                        </div>
                    {% endif %}

                    <!-- Support -->
                    <div class="card mt-3">
                        <div class="card-body text-center">
                            <i class="fas fa-headset fa-2x text-primary mb-2"></i>
                            <h6>Besoin d'aide ?</h6>
                            <p class="text-muted small">Notre équipe est là pour vous accompagner</p>
                            <a href="{{ path('app_contact') }}" class="btn btn-outline-primary btn-sm">
                                Contacter le support
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function regenerateContract(contractId) {
    if (confirm('Êtes-vous sûr de vouloir régénérer le contrat ? Cette action remplacera le fichier PDF actuel.')) {
        fetch(`/contrats/${contractId}/regenerer`, {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Erreur: ' + data.error);
            }
        })
        .catch(error => {
            alert('Erreur lors de la régénération du contrat');
        });
    }
}

function simulateRepayment() {
    const date = document.getElementById('repaymentDate').value;
    
    fetch(`/contrats/{{ contract.id }}/simulation-remboursement?date=${date}`)
        .then(response => response.json())
        .then(data => {
            document.getElementById('simulationResult').innerHTML = `
                <div class="alert alert-info">
                    <strong>Montant à payer :</strong><br>
                    ${data.earlyRepaymentAmount.toLocaleString('fr-FR')}€
                    <hr>
                    <small class="text-muted">
                        Économie d'intérêts : ${data.interestSavings.toLocaleString('fr-FR')}€
                    </small>
                </div>
            `;
        })
        .catch(error => {
            document.getElementById('simulationResult').innerHTML = 
                '<div class="alert alert-danger">Erreur lors du calcul</div>';
        });
}
</script>
{% endblock %}