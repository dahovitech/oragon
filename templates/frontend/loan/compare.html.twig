{% extends 'frontend/base.html.twig' %}

{% block title %}Comparateur de Prêts - EdgeLoan{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .compare-table {
            font-size: 14px;
        }
        .compare-table th {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
            border: none;
            padding: 15px 10px;
            vertical-align: middle;
        }
        .compare-table td {
            padding: 12px 10px;
            border: 1px solid #e0e0e0;
            vertical-align: middle;
        }
        .loan-header {
            background: #f8f9fa;
        }
        .feature-check {
            color: #28a745;
        }
        .feature-cross {
            color: #dc3545;
        }
        .highlight-best {
            background: #e7f3ff;
            border-left: 4px solid #007bff;
        }
    </style>
{% endblock %}

{% block body %}
<div class="page-content">
    <!-- Header Section -->
    <section class="page-header page-header-modern page-header-md">
        <div class="container">
            <div class="row">
                <div class="col-md-8 align-self-center p-static order-2">
                    <h1 class="text-dark font-weight-bold text-8">Comparateur de Prêts</h1>
                    <span class="sub-title text-dark">Comparez jusqu'à 3 offres de prêt côte à côte</span>
                </div>
                <div class="col-md-4 text-end order-1">
                    <a href="{{ path('app_loan_catalog') }}" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-2"></i>Retour au catalogue
                    </a>
                </div>
            </div>
        </div>
    </section>

    <div class="container py-5">
        {% if loanTypes is empty %}
            <!-- Empty State -->
            <div class="row justify-content-center">
                <div class="col-lg-6 text-center">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body py-5">
                            <i class="fas fa-balance-scale fa-4x text-muted mb-4"></i>
                            <h4>Aucun prêt à comparer</h4>
                            <p class="text-muted mb-4">
                                Sélectionnez des offres de prêt depuis le catalogue pour les comparer ici.
                            </p>
                            <a href="{{ path('app_loan_catalog') }}" class="btn btn-primary">
                                <i class="fas fa-search me-2"></i>Parcourir le catalogue
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <!-- Comparison Instructions -->
            <div class="alert alert-info">
                <div class="d-flex align-items-center">
                    <i class="fas fa-info-circle fa-2x me-3"></i>
                    <div>
                        <h6 class="mb-1">Comment utiliser le comparateur ?</h6>
                        <p class="mb-0">Les colonnes surlignées en bleu indiquent les meilleures conditions pour chaque critère.</p>
                    </div>
                </div>
            </div>

            <!-- Comparison Table -->
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-bordered compare-table mb-0">
                            <thead>
                                <tr>
                                    <th style="width: 200px;">Critères</th>
                                    {% for loanType in loanTypes %}
                                        <th class="text-center" style="width: {{ (100 / loanTypes|length)|round }}%;">
                                            {{ loanType.name }}
                                        </th>
                                    {% endfor %}
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Loan Headers -->
                                <tr class="loan-header">
                                    <td><strong>Aperçu</strong></td>
                                    {% for loanType in loanTypes %}
                                        <td class="text-center">
                                            {% if loanType.image %}
                                                <img src="{{ loanType.image.path }}" class="img-fluid rounded mb-2" 
                                                     style="max-height: 60px; object-fit: cover;" alt="{{ loanType.name }}">
                                            {% else %}
                                                <div class="bg-primary rounded d-inline-flex align-items-center justify-content-center mb-2" 
                                                     style="width: 60px; height: 60px;">
                                                    <i class="fas fa-coins text-white"></i>
                                                </div>
                                            {% endif %}
                                            <br>
                                            <small class="text-muted">{{ loanType.description|slice(0, 50) }}...</small>
                                        </td>
                                    {% endfor %}
                                </tr>

                                <!-- Taux d'intérêt -->
                                <tr>
                                    <td><strong>Taux d'intérêt</strong></td>
                                    {% set bestRate = loanTypes|reduce((carry, item) => carry is null or item.baseInterestRate < carry ? item.baseInterestRate : carry) %}
                                    {% for loanType in loanTypes %}
                                        <td class="text-center {% if loanType.baseInterestRate == bestRate %}highlight-best{% endif %}">
                                            <span class="h5 text-primary">{{ loanType.baseInterestRate }}%</span>
                                            {% if loanType.baseInterestRate == bestRate %}
                                                <br><small class="text-success"><i class="fas fa-star"></i> Meilleur taux</small>
                                            {% endif %}
                                        </td>
                                    {% endfor %}
                                </tr>

                                <!-- Montant minimum -->
                                <tr>
                                    <td><strong>Montant minimum</strong></td>
                                    {% set bestMinAmount = loanTypes|reduce((carry, item) => carry is null or item.minAmount < carry ? item.minAmount : carry) %}
                                    {% for loanType in loanTypes %}
                                        <td class="text-center {% if loanType.minAmount == bestMinAmount %}highlight-best{% endif %}">
                                            <strong>{{ loanType.minAmount|number_format(0, ',', ' ') }}€</strong>
                                            {% if loanType.minAmount == bestMinAmount %}
                                                <br><small class="text-success"><i class="fas fa-star"></i> Plus accessible</small>
                                            {% endif %}
                                        </td>
                                    {% endfor %}
                                </tr>

                                <!-- Montant maximum -->
                                <tr>
                                    <td><strong>Montant maximum</strong></td>
                                    {% set bestMaxAmount = loanTypes|reduce((carry, item) => carry is null or item.maxAmount > carry ? item.maxAmount : carry) %}
                                    {% for loanType in loanTypes %}
                                        <td class="text-center {% if loanType.maxAmount == bestMaxAmount %}highlight-best{% endif %}">
                                            <strong>{{ loanType.maxAmount|number_format(0, ',', ' ') }}€</strong>
                                            {% if loanType.maxAmount == bestMaxAmount %}
                                                <br><small class="text-success"><i class="fas fa-star"></i> Montant le plus élevé</small>
                                            {% endif %}
                                        </td>
                                    {% endfor %}
                                </tr>

                                <!-- Durée minimum -->
                                <tr>
                                    <td><strong>Durée minimum</strong></td>
                                    {% set bestMinDuration = loanTypes|reduce((carry, item) => carry is null or item.minDuration < carry ? item.minDuration : carry) %}
                                    {% for loanType in loanTypes %}
                                        <td class="text-center {% if loanType.minDuration == bestMinDuration %}highlight-best{% endif %}">
                                            <strong>{{ loanType.minDuration }} mois</strong>
                                            {% if loanType.minDuration == bestMinDuration %}
                                                <br><small class="text-success"><i class="fas fa-star"></i> Plus flexible</small>
                                            {% endif %}
                                        </td>
                                    {% endfor %}
                                </tr>

                                <!-- Durée maximum -->
                                <tr>
                                    <td><strong>Durée maximum</strong></td>
                                    {% set bestMaxDuration = loanTypes|reduce((carry, item) => carry is null or item.maxDuration > carry ? item.maxDuration : carry) %}
                                    {% for loanType in loanTypes %}
                                        <td class="text-center {% if loanType.maxDuration == bestMaxDuration %}highlight-best{% endif %}">
                                            <strong>{{ loanType.maxDuration }} mois</strong>
                                            {% if loanType.maxDuration == bestMaxDuration %}
                                                <br><small class="text-success"><i class="fas fa-star"></i> Plus long terme</small>
                                            {% endif %}
                                        </td>
                                    {% endfor %}
                                </tr>

                                <!-- Types de comptes acceptés -->
                                <tr>
                                    <td><strong>Types de comptes</strong></td>
                                    {% for loanType in loanTypes %}
                                        <td class="text-center">
                                            {% for accountType in loanType.allowedAccountTypes %}
                                                {% if accountType == 'INDIVIDUAL' %}
                                                    <span class="badge bg-info me-1">
                                                        <i class="fas fa-user"></i> Particulier
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-warning me-1">
                                                        <i class="fas fa-building"></i> Entreprise
                                                    </span>
                                                {% endif %}
                                                {% if not loop.last %}<br>{% endif %}
                                            {% endfor %}
                                        </td>
                                    {% endfor %}
                                </tr>

                                <!-- Actions -->
                                <tr class="loan-header">
                                    <td><strong>Actions</strong></td>
                                    {% for loanType in loanTypes %}
                                        <td class="text-center">
                                            <div class="d-grid gap-2">
                                                <a href="{{ path('app_loan_detail', {'slug': loanType.slug}) }}" 
                                                   class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-eye"></i> Voir détails
                                                </a>
                                                
                                                {% if app.user and app.user.isVerified %}
                                                    <a href="{{ path('app_loan_application_new', {'loanType': loanType.id}) }}" 
                                                       class="btn btn-primary btn-sm">
                                                        <i class="fas fa-paper-plane"></i> Faire une demande
                                                    </a>
                                                {% else %}
                                                    <button class="btn btn-secondary btn-sm" disabled 
                                                            data-bs-toggle="tooltip" title="Compte non vérifié">
                                                        <i class="fas fa-lock"></i> Demander
                                                    </button>
                                                {% endif %}

                                                <a href="{{ path('app_loan_calculator') }}?loanType={{ loanType.id }}" 
                                                   class="btn btn-outline-info btn-sm">
                                                    <i class="fas fa-calculator"></i> Simuler
                                                </a>
                                            </div>
                                        </td>
                                    {% endfor %}
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Help Section -->
            <div class="row mt-5">
                <div class="col-lg-4">
                    <div class="card h-100 border-primary">
                        <div class="card-body text-center">
                            <i class="fas fa-question-circle fa-3x text-primary mb-3"></i>
                            <h5>Besoin d'aide ?</h5>
                            <p class="text-muted">
                                Nos conseillers sont là pour vous aider à choisir le meilleur prêt.
                            </p>
                            <a href="{{ path('app_contact') }}" class="btn btn-outline-primary">
                                Nous contacter
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4">
                    <div class="card h-100 border-success">
                        <div class="card-body text-center">
                            <i class="fas fa-calculator fa-3x text-success mb-3"></i>
                            <h5>Simuler vos mensualités</h5>
                            <p class="text-muted">
                                Utilisez notre calculateur pour estimer vos remboursements.
                            </p>
                            <a href="{{ path('app_loan_calculator') }}" class="btn btn-outline-success">
                                Calculateur
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4">
                    <div class="card h-100 border-info">
                        <div class="card-body text-center">
                            <i class="fas fa-file-alt fa-3x text-info mb-3"></i>
                            <h5>Documentation complète</h5>
                            <p class="text-muted">
                                Consultez notre FAQ pour toutes vos questions.
                            </p>
                            <a href="{{ path('app_faq') }}" class="btn btn-outline-info">
                                FAQ
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
{% endblock %}