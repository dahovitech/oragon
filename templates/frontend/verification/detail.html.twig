{% extends 'frontend/base.html.twig' %}

{% block title %}Détails vérification - EdgeLoan{% endblock %}

{% block body %}
<div class="page-content">
    <!-- Header Section -->
    <section class="page-header page-header-modern page-header-md">
        <div class="container">
            <div class="row">
                <div class="col-md-12 align-self-center p-static order-2 text-center">
                    <h1 class="text-dark font-weight-bold text-8">Détails de la vérification</h1>
                    <span class="sub-title text-dark">Consultez les informations détaillées de votre demande</span>
                </div>
            </div>
        </div>
    </section>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_verification_index') }}">Vérifications</a>
                        </li>
                        <li class="breadcrumb-item active">Détails</li>
                    </ol>
                </nav>

                <!-- Status Card -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h4 class="mb-2">
                                    {% set type_label = {
                                        'ID_CARD': 'Pièce d\'identité',
                                        'PROOF_INCOME': 'Justificatif de revenus',
                                        'BANK_STATEMENT': 'Relevé bancaire',
                                        'BUSINESS_REGISTRATION': 'Extrait Kbis',
                                        'PROOF_ADDRESS': 'Justificatif de domicile',
                                        'TAX_RETURN': 'Avis d\'imposition',
                                        'PAYSLIP': 'Bulletin de salaire',
                                        'OTHER': 'Autre document'
                                    } %}
                                    {{ type_label[verification.verificationType.value] ?? verification.verificationType.value }}
                                </h4>
                                
                                <p class="text-muted mb-2">
                                    <i class="fas fa-calendar me-2"></i>
                                    Soumis le {{ verification.submittedAt|date('d/m/Y à H:i') }}
                                </p>
                                
                                {% if verification.verifiedAt %}
                                    <p class="text-muted mb-0">
                                        <i class="fas fa-user-check me-2"></i>
                                        Traité le {{ verification.verifiedAt|date('d/m/Y à H:i') }}
                                        {% if verification.verifiedBy %}
                                            par {{ verification.verifiedBy.firstName }} {{ verification.verifiedBy.lastName }}
                                        {% endif %}
                                    </p>
                                {% endif %}
                            </div>
                            <div class="col-md-4 text-end">
                                {% if verification.status.value == 'VERIFIED' %}
                                    <span class="badge bg-success fs-6 px-3 py-2">
                                        <i class="fas fa-check-circle me-2"></i>Vérifié
                                    </span>
                                {% elseif verification.status.value == 'PENDING' %}
                                    <span class="badge bg-warning fs-6 px-3 py-2">
                                        <i class="fas fa-clock me-2"></i>En attente
                                    </span>
                                {% else %}
                                    <span class="badge bg-danger fs-6 px-3 py-2">
                                        <i class="fas fa-times-circle me-2"></i>Rejeté
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Documents -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-file-alt me-2"></i>
                            Documents soumis ({{ verification.documents|length }})
                        </h5>
                    </div>
                    <div class="card-body">
                        {% if verification.documents is empty %}
                            <p class="text-muted text-center py-3">Aucun document attaché</p>
                        {% else %}
                            <div class="row">
                                {% for document in verification.documents %}
                                    <div class="col-md-6 mb-3">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3">
                                                        {% if document.fileName|slice(-3) == 'pdf' %}
                                                            <i class="fas fa-file-pdf fa-2x text-danger"></i>
                                                        {% else %}
                                                            <i class="fas fa-file-image fa-2x text-primary"></i>
                                                        {% endif %}
                                                    </div>
                                                    <div class="flex-grow-1">
                                                        <h6 class="mb-1">{{ document.originalName }}</h6>
                                                        <p class="text-muted mb-1">
                                                            <small>
                                                                <i class="fas fa-calendar me-1"></i>
                                                                {{ document.uploadedAt|date('d/m/Y H:i') }}
                                                            </small>
                                                        </p>
                                                        <div class="d-flex align-items-center">
                                                            {% if document.isVerified %}
                                                                <span class="badge bg-success me-2">
                                                                    <i class="fas fa-check me-1"></i>Vérifié
                                                                </span>
                                                            {% else %}
                                                                <span class="badge bg-secondary me-2">
                                                                    <i class="fas fa-clock me-1"></i>En attente
                                                                </span>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-footer">
                                                <a href="/uploads/verification/{{ document.fileName }}" 
                                                   target="_blank" 
                                                   class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-download me-1"></i>Télécharger
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Comments -->
                {% if verification.comments %}
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-comment-alt me-2"></i>
                                Commentaires
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info">
                                {{ verification.comments|nl2br }}
                            </div>
                        </div>
                    </div>
                {% endif %}

                <!-- Timeline -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-history me-2"></i>
                            Historique
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="timeline">
                            <div class="timeline-item">
                                <div class="timeline-marker bg-primary"></div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">Demande soumise</h6>
                                    <p class="text-muted mb-0">
                                        {{ verification.submittedAt|date('d/m/Y à H:i') }}
                                    </p>
                                </div>
                            </div>
                            
                            {% if verification.verifiedAt %}
                                <div class="timeline-item">
                                    <div class="timeline-marker {% if verification.status.value == 'VERIFIED' %}bg-success{% else %}bg-danger{% endif %}"></div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">
                                            {% if verification.status.value == 'VERIFIED' %}
                                                Vérification approuvée
                                            {% else %}
                                                Vérification rejetée
                                            {% endif %}
                                        </h6>
                                        <p class="text-muted mb-0">
                                            {{ verification.verifiedAt|date('d/m/Y à H:i') }}
                                            {% if verification.verifiedBy %}
                                                par {{ verification.verifiedBy.firstName }} {{ verification.verifiedBy.lastName }}
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_verification_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour aux vérifications
                    </a>
                    
                    {% if verification.status.value == 'REJECTED' %}
                        <a href="{{ path('app_verification_new') }}" class="btn btn-primary">
                            <i class="fas fa-redo me-2"></i>Nouvelle demande
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.timeline {
    position: relative;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 15px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #dee2e6;
}

.timeline-item {
    position: relative;
    padding-left: 50px;
    padding-bottom: 30px;
}

.timeline-marker {
    position: absolute;
    left: 7px;
    top: 5px;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    border: 3px solid #fff;
    box-shadow: 0 0 0 2px #dee2e6;
}

.timeline-content h6 {
    margin-bottom: 5px;
    font-weight: 600;
}
</style>
{% endblock %}