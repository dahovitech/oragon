{% extends 'frontend/base.html.twig' %}

{% block title %}Mes Demandes de Prêt - EdgeLoan{% endblock %}

{% block body %}
<div class="page-content">
    <!-- Header Section -->
    <section class="page-header page-header-modern page-header-sm">
        <div class="container">
            <div class="row">
                <div class="col-md-8 align-self-center p-static order-2">
                    <h1 class="text-dark font-weight-bold text-7">Mes Demandes de Prêt</h1>
                    <span class="sub-title text-dark">Suivi et gestion de toutes vos demandes</span>
                </div>
                <div class="col-md-4 text-end order-1">
                    <a href="{{ path('app_dashboard_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour au dashboard
                    </a>
                </div>
            </div>
        </div>
    </section>

    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4>{{ applications|length }} demande(s) au total</h4>
            {% if user.isVerified %}
                <a href="{{ path('app_loan_application_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Nouvelle demande
                </a>
            {% endif %}
        </div>

        {% if applications is empty %}
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="fas fa-file-alt fa-4x text-muted mb-4"></i>
                    <h5>Aucune demande de prêt</h5>
                    <p class="text-muted mb-4">Vous n'avez pas encore fait de demande de prêt.</p>
                    {% if user.isVerified %}
                        <a href="{{ path('app_loan_catalog') }}" class="btn btn-primary">
                            <i class="fas fa-search me-2"></i>Parcourir le catalogue
                        </a>
                    {% else %}
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Vous devez d'abord vérifier votre compte pour faire une demande de prêt.
                            <a href="{{ path('app_verification_index') }}" class="btn btn-warning btn-sm ms-2">
                                Vérifier maintenant
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <div class="row">
                {% for application in applications %}
                    <div class="col-lg-6 mb-4">
                        <div class="card h-100">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">{{ application.loanType.name }}</h6>
                                {% set statusClass = 'secondary' %}
                                {% if application.status.value == 'DRAFT' %}
                                    {% set statusClass = 'secondary' %}
                                {% elseif application.status.value == 'SUBMITTED' or application.status.value == 'UNDER_REVIEW' %}
                                    {% set statusClass = 'warning' %}
                                {% elseif application.status.value == 'APPROVED' %}
                                    {% set statusClass = 'success' %}
                                {% elseif application.status.value == 'REJECTED' %}
                                    {% set statusClass = 'danger' %}
                                {% elseif application.status.value == 'DISBURSED' %}
                                    {% set statusClass = 'info' %}
                                {% endif %}
                                <span class="badge bg-{{ statusClass }}">
                                    {{ application.status.value|title }}
                                </span>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <small class="text-muted d-block">Montant demandé</small>
                                        <strong class="text-primary">{{ application.requestedAmount|number_format(0, ',', ' ') }}€</strong>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted d-block">Durée</small>
                                        <strong>{{ application.duration }} mois</strong>
                                    </div>
                                </div>

                                {% if application.monthlyPayment %}
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <small class="text-muted d-block">Mensualité</small>
                                            <strong>{{ application.monthlyPayment|number_format(2, ',', ' ') }}€</strong>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted d-block">Taux</small>
                                            <strong>{{ application.interestRate }}%</strong>
                                        </div>
                                    </div>
                                {% endif %}

                                {% if application.purpose %}
                                    <div class="mb-3">
                                        <small class="text-muted d-block">Objet</small>
                                        <span>{{ application.purpose }}</span>
                                    </div>
                                {% endif %}

                                <div class="mb-3">
                                    <small class="text-muted d-block">
                                        {% if application.submittedAt %}
                                            Soumise le
                                        {% else %}
                                            Créée le
                                        {% endif %}
                                    </small>
                                    <span>
                                        {% if application.submittedAt %}
                                            {{ application.submittedAt|date('d/m/Y à H:i') }}
                                        {% else %}
                                            {{ application.createdAt|date('d/m/Y à H:i') }}
                                        {% endif %}
                                    </span>
                                </div>

                                {% if application.documents|length > 0 %}
                                    <div class="mb-3">
                                        <small class="text-muted d-block">Documents</small>
                                        <span class="badge bg-info">{{ application.documents|length }} fichier(s)</span>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="d-flex gap-2">
                                    <a href="{{ path('app_loan_application_detail', {'id': application.id}) }}" 
                                       class="btn btn-outline-primary btn-sm flex-grow-1">
                                        <i class="fas fa-eye me-1"></i>Voir détails
                                    </a>
                                    
                                    {% if application.status.value == 'DRAFT' %}
                                        <a href="{{ path('app_loan_application_edit', {'id': application.id}) }}" 
                                           class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit me-1"></i>Modifier
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}