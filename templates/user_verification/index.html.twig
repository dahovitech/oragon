    padding: 0.5rem 0;
    border-bottom: 1px solid #f1f1f1;
}

.verification-sidebar__list li:last-child {
    border-bottom: none;
}

.file-feedback {
    margin-top: 0.5rem;
    font-size: 0.875rem;
}
</style>
{% endblock %}