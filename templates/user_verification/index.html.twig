    background: #f8f9fa;
    border: 1px solid #e9ecef;
    border-radius: 8px;
    padding: 1rem;
}

.verification-status__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
}

.verification-status__badge {
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.875rem;
    font-weight: 500;
}

.verification-status__badge.verified {
    background-color: #d4edda;
    color: #155724;
}

.verification-status__badge.rejected {
    background-color: #f8d7da;
    color: #721c24;
}

.verification-status__badge.pending {
    background-color: #fff3cd;
    color: #856404;
}

.file-upload-group {
    position: relative;
}

.file-upload-wrapper {
    border: 2px dashed #ddd;
    border-radius: 8px;
    padding: 1rem;
    text-align: center;
    transition: all 0.3s ease;
}

.file-upload-wrapper:hover {
    border-color: #007bff;
    background-color: #f8f9fa;
}

.file-upload-wrapper.has-files {
