{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Viva Shop{% endblock %}

{% block body %}
<div class="container my-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_shop_index') }}">Shop</a></li>
            {% if product.category %}
                <li class="breadcrumb-item"><a href="{{ path('app_shop_category', {'slug': product.category.slug}) }}">{{ product.category.name }}</a></li>
            {% endif %}
            <li class="breadcrumb-item active">{{ product.name }}</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Product Images -->
        <div class="col-lg-6 mb-4">
            <div class="card">
                <img src="https://via.placeholder.com/600x500" class="card-img-top" alt="{{ product.name }}">
            </div>
        </div>

        <!-- Product Info -->
        <div class="col-lg-6">
            <h1 class="mb-3">{{ product.name }}</h1>
            <div class="mb-3">
                <span class="badge bg-secondary">SKU: {{ product.sku }}</span>
                {% if product.isFeatured %}
                    <span class="badge bg-warning">Featured</span>
                {% endif %}
            </div>

            <div class="mb-4">
                <h2 class="text-primary mb-2">
                    ${{ product.price }}
                    {% if product.compareAtPrice %}
                        <span class="h5 text-muted text-decoration-line-through ms-2">${{ product.compareAtPrice }}</span>
                    {% endif %}
                </h2>
            </div>

            {% if product.description %}
                <div class="mb-4">
                    <h5>Description</h5>
                    <p>{{ product.description|nl2br }}</p>
                </div>
            {% endif %}

            <div class="mb-4">
                <h5>Product Details</h5>
                <table class="table table-sm">
                    <tbody>
                        {% if product.category %}
                            <tr>
                                <th width="30%">Category:</th>
                                <td>{{ product.category.name }}</td>
                            </tr>
                        {% endif %}
                        <tr>
                            <th>Availability:</th>
                            <td>
                                {% if product.stock > 0 %}
                                    <span class="badge bg-success">In Stock ({{ product.stock }} units)</span>
                                {% else %}
                                    <span class="badge bg-danger">Out of Stock</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% if product.weight %}
                            <tr>
                                <th>Weight:</th>
                                <td>{{ product.weight }} kg</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>

            <div class="mb-4">
                <form method="post" action="{{ path('app_cart_add', {'id': product.id}) }}">
                    <div class="input-group mb-3" style="max-width: 200px;">
                        <button class="btn btn-outline-secondary" type="button" onclick="this.parentElement.querySelector('input').stepDown()">-</button>
                        <input type="number" name="quantity" class="form-control text-center" value="1" min="1" max="{{ product.stock }}">
                        <button class="btn btn-outline-secondary" type="button" onclick="this.parentElement.querySelector('input').stepUp()">+</button>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg" {% if product.stock == 0 %}disabled{% endif %}>
                        <i class="fas fa-shopping-cart me-2"></i>
                        Add to Cart
                    </button>
                    <button type="button" class="btn btn-outline-secondary btn-lg ms-2">
                        <i class="fas fa-heart"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Related Products -->
    {% if relatedProducts|length > 0 %}
        <div class="row mt-5">
            <div class="col-12">
                <h3 class="mb-4">Related Products</h3>
            </div>
            {% for relatedProduct in relatedProducts %}
                {% if relatedProduct.id != product.id %}
                    <div class="col-md-3 mb-4">
                        <div class="card h-100">
                            <img src="https://via.placeholder.com/250x200" class="card-img-top" alt="{{ relatedProduct.name }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ relatedProduct.name }}</h5>
                                <p class="h5 text-primary">${{ relatedProduct.price }}</p>
                            </div>
                            <div class="card-footer bg-white border-top-0">
                                <a href="{{ path('app_shop_product', {'slug': relatedProduct.slug}) }}" class="btn btn-outline-primary w-100">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
