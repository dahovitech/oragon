{% extends 'base.html.twig' %}

{% set postTranslation = post.getTranslation(app.request.locale) ?? post.getTranslation(default_locale) %}

{% block title %}{{ postTranslation.title }} - {{ parent() }}{% endblock %}
{% block meta_description %}{{ postTranslation.metaDescription ?? (postTranslation.excerpt|striptags|slice(0, 160)) }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/vendors/slick.css') }}">
{% endblock %}

{% block body %}
<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>{{ 'blog.post_detail'|trans }}</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('home', {'_locale': app.request.locale}) }}">{{ 'nav.home'|trans }}</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('blog_index', {'_locale': app.request.locale}) }}">{{ 'blog.title'|trans }}</a></li>
                        <li class="breadcrumb-item active">{{ postTranslation.title|slice(0, 50) }}{% if postTranslation.title|length > 50 %}...{% endif %}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->

<!-- Blog Post Section Start -->
<section class="blog-detail-section section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-12">
                <article class="blog-post">
                    <!-- Post Header -->
                    <div class="post-header">
                        {% if post.featuredImage %}
                        <div class="post-featured-image">
                            <img src="{{ asset('uploads/blog/' ~ post.featuredImage) }}" 
                                 alt="{{ postTranslation.title }}" 
                                 class="img-fluid">
                        </div>
                        {% endif %}

                        <div class="post-meta">
                            {% if post.author %}
                            <span class="author">
                                <i class="fa fa-user"></i>
                                <a href="{{ path('blog_author', {'id': post.author.id, '_locale': app.request.locale}) }}">
                                    {{ post.author.firstName }} {{ post.author.lastName }}
                                </a>
                            </span>
                            {% endif %}
                            <span class="date">
                                <i class="fa fa-calendar"></i>
                                {{ post.publishedAt|date('d/m/Y') }}
                            </span>
                            <span class="reading-time">
                                <i class="fa fa-clock-o"></i>
                                {{ post.readingTime ?? '5' }} {{ 'blog.min_read'|trans }}
                            </span>
                            {% if post.viewsCount is defined %}
                            <span class="views">
                                <i class="fa fa-eye"></i>
                                {{ post.viewsCount }} {{ 'blog.views'|trans }}
                            </span>
                            {% endif %}
                        </div>

                        <h1 class="post-title">{{ postTranslation.title }}</h1>
                        
                        {% if postTranslation.excerpt %}
                        <div class="post-excerpt">
                            {{ postTranslation.excerpt|raw }}
                        </div>
                        {% endif %}
                    </div>

                    <!-- Post Content -->
                    <div class="post-content">
                        {{ postTranslation.content|raw }}
                    </div>

                    <!-- Post Tags -->
                    {% if post.tags is defined and post.tags|length > 0 %}
                    <div class="post-tags">
                        <h5>{{ 'blog.tags'|trans }}:</h5>
                        <div class="tag-list">
                            {% for tag in post.tags %}
                            <a href="{{ path('blog_tag', {'slug': tag.slug, '_locale': app.request.locale}) }}" class="tag">
                                {{ tag.getTranslation(app.request.locale).name ?? tag.getTranslation(default_locale).name }}
                            </a>
                            {% endfor %}
                        </div>
                    </div>
                    {% endif %}

                    <!-- Post Sharing -->
                    <div class="post-sharing">
                        <h5>{{ 'blog.share_this_post'|trans }}:</h5>
                        <div class="share-buttons">
                            <a href="https://www.facebook.com/sharer/sharer.php?u={{ url(app.request.uri) }}" 
                               target="_blank" class="share-btn facebook">
                                <i class="fa fa-facebook"></i>
                                Facebook
                            </a>
                            <a href="https://twitter.com/intent/tweet?url={{ url(app.request.uri) }}&text={{ postTranslation.title|url_encode }}" 
                               target="_blank" class="share-btn twitter">
                                <i class="fa fa-twitter"></i>
                                Twitter
                            </a>
                            <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ url(app.request.uri) }}" 
                               target="_blank" class="share-btn linkedin">
                                <i class="fa fa-linkedin"></i>
                                LinkedIn
                            </a>
                            <a href="mailto:?subject={{ postTranslation.title|url_encode }}&body={{ url(app.request.uri) }}" 
                               class="share-btn email">
                                <i class="fa fa-envelope"></i>
                                {{ 'blog.email'|trans }}
                            </a>
                            <button type="button" class="share-btn copy" id="copy-link" 
                                    data-url="{{ url(app.request.uri) }}">
                                <i class="fa fa-link"></i>
                                {{ 'blog.copy_link'|trans }}
                            </button>
                        </div>
                    </div>

                    <!-- Author Bio -->
                    {% if post.author %}
                    <div class="author-bio">
                        <div class="author-avatar">
                            {% if post.author.avatar %}
                                <img src="{{ asset('uploads/avatars/' ~ post.author.avatar) }}" 
                                     alt="{{ post.author.firstName }} {{ post.author.lastName }}">
                            {% else %}
                                <div class="avatar-placeholder">
                                    <i class="fa fa-user"></i>
                                </div>
                            {% endif %}
                        </div>
                        <div class="author-info">
                            <h4>
                                <a href="{{ path('blog_author', {'id': post.author.id, '_locale': app.request.locale}) }}">
                                    {{ post.author.firstName }} {{ post.author.lastName }}
                                </a>
                            </h4>
                            {% if post.author.bio %}
                            <p>{{ post.author.bio|raw }}</p>
                            {% endif %}
                            <div class="author-social">
                                {% if post.author.website %}
                                <a href="{{ post.author.website }}" target="_blank" class="social-link">
                                    <i class="fa fa-globe"></i>
                                </a>
                                {% endif %}
                                {% if post.author.twitter %}
                                <a href="https://twitter.com/{{ post.author.twitter }}" target="_blank" class="social-link">
                                    <i class="fa fa-twitter"></i>
                                </a>
                                {% endif %}
                                {% if post.author.linkedin %}
                                <a href="{{ post.author.linkedin }}" target="_blank" class="social-link">
                                    <i class="fa fa-linkedin"></i>
                                </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </article>

                <!-- Related Posts -->
                {% if related_posts|length > 0 %}
                <div class="related-posts">
                    <h3>{{ 'blog.related_posts'|trans }}</h3>
                    <div class="row">
                        {% for related_post in related_posts %}
                        <div class="col-md-4">
                            <div class="related-post-card">
                                {% if related_post.featuredImage %}
                                <div class="post-image">
                                    <a href="{{ path('blog_show', {'slug': related_post.getTranslation(app.request.locale).slug ?? related_post.getTranslation(default_locale).slug, '_locale': app.request.locale}) }}">
                                        <img src="{{ asset('uploads/blog/thumbs/' ~ related_post.featuredImage) }}" 
                                             alt="{{ related_post.getTranslation(app.request.locale).title ?? related_post.getTranslation(default_locale).title }}" 
                                             class="img-fluid">
                                    </a>
                                </div>
                                {% endif %}
                                <div class="post-content">
                                    <p class="post-date">{{ related_post.publishedAt|date('d/m/Y') }}</p>
                                    <h5>
                                        <a href="{{ path('blog_show', {'slug': related_post.getTranslation(app.request.locale).slug ?? related_post.getTranslation(default_locale).slug, '_locale': app.request.locale}) }}">
                                            {{ related_post.getTranslation(app.request.locale).title ?? related_post.getTranslation(default_locale).title }}
                                        </a>
                                    </h5>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}

                <!-- Comments Section -->
                <div class="comments-section">
                    <h3>{{ 'blog.comments'|trans }}</h3>
                    
                    <!-- Comment Form -->
                    {% if app.user %}
                    <div class="comment-form">
                        <h4>{{ 'blog.leave_comment'|trans }}</h4>
                        <form method="post" action="{{ path('blog_comment', {'id': post.id, '_locale': app.request.locale}) }}" id="comment-form">
                            <div class="form-group">
                                <textarea name="content" class="form-control" rows="4" 
                                          placeholder="{{ 'blog.comment_placeholder'|trans }}" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-solid">{{ 'blog.post_comment'|trans }}</button>
                        </form>
                    </div>
                    {% else %}
                    <div class="comment-login">
                        <p>
                            <a href="{{ path('app_login', {'_locale': app.request.locale}) }}">{{ 'auth.login'|trans }}</a> 
                            {{ 'blog.login_to_comment'|trans }}
                        </p>
                    </div>
                    {% endif %}

                    <!-- Existing Comments -->
                    {% if post.comments is defined and post.comments|length > 0 %}
                    <div class="comments-list">
                        {% for comment in post.comments %}
                            {% if comment.isApproved %}
                            <div class="comment-item">
                                <div class="comment-avatar">
                                    {% if comment.user.avatar %}
                                        <img src="{{ asset('uploads/avatars/' ~ comment.user.avatar) }}" 
                                             alt="{{ comment.user.firstName }} {{ comment.user.lastName }}">
                                    {% else %}
                                        <div class="avatar-placeholder">
                                            <i class="fa fa-user"></i>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="comment-content">
                                    <div class="comment-header">
                                        <h6>{{ comment.user.firstName }} {{ comment.user.lastName }}</h6>
                                        <span class="comment-date">{{ comment.createdAt|date('d/m/Y H:i') }}</span>
                                    </div>
                                    <div class="comment-text">
                                        {{ comment.content|nl2br }}
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    {% else %}
                    <div class="no-comments">
                        <p>{{ 'blog.no_comments'|trans }}</p>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-3 col-md-12">
                <div class="blog-sidebar">
                    <!-- Search Widget -->
                    <div class="sidebar-widget">
                        <h4 class="widget-title">{{ 'blog.search'|trans }}</h4>
                        <form method="get" action="{{ path('blog_index', {'_locale': app.request.locale}) }}" class="search-form">
                            <div class="input-group">
                                <input type="text" name="search" class="form-control" 
                                       placeholder="{{ 'blog.search_placeholder'|trans }}">
                                <button class="btn btn-solid" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- Recent Posts Widget -->
                    {% if recent_posts|length > 0 %}
                    <div class="sidebar-widget">
                        <h4 class="widget-title">{{ 'blog.recent_posts'|trans }}</h4>
                        <div class="recent-posts">
                            {% for recent_post in recent_posts %}
                            <div class="recent-post-item">
                                {% if recent_post.featuredImage %}
                                <div class="post-thumb">
                                    <a href="{{ path('blog_show', {'slug': recent_post.getTranslation(app.request.locale).slug ?? recent_post.getTranslation(default_locale).slug, '_locale': app.request.locale}) }}">
                                        <img src="{{ asset('uploads/blog/thumbs/' ~ recent_post.featuredImage) }}" 
                                             alt="{{ recent_post.getTranslation(app.request.locale).title ?? recent_post.getTranslation(default_locale).title }}">
                                    </a>
                                </div>
                                {% endif %}
                                <div class="post-info">
                                    <h6>
                                        <a href="{{ path('blog_show', {'slug': recent_post.getTranslation(app.request.locale).slug ?? recent_post.getTranslation(default_locale).slug, '_locale': app.request.locale}) }}">
                                            {{ recent_post.getTranslation(app.request.locale).title ?? recent_post.getTranslation(default_locale).title }}
                                        </a>
                                    </h6>
                                    <p class="post-date">
                                        <i class="fa fa-calendar"></i>
                                        {{ recent_post.publishedAt|date('d/m/Y') }}
                                    </p>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    {% endif %}

                    <!-- Newsletter Widget -->
                    <div class="sidebar-widget newsletter-widget">
                        <h4 class="widget-title">{{ 'blog.newsletter'|trans }}</h4>
                        <p>{{ 'blog.newsletter_description'|trans }}</p>
                        <form class="newsletter-form" method="post" action="{{ path('newsletter_subscribe', {'_locale': app.request.locale}) }}">
                            <div class="input-group">
                                <input type="email" name="email" class="form-control" 
                                       placeholder="{{ 'blog.newsletter_email'|trans }}" required>
                                <button class="btn btn-solid" type="submit">
                                    {{ 'blog.subscribe'|trans }}
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Post Section End -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            // Copy link functionality
            $('#copy-link').on('click', function() {
                const url = $(this).data('url');
                navigator.clipboard.writeText(url).then(function() {
                    toastr.success('{{ 'blog.link_copied'|trans }}');
                }).catch(function() {
                    // Fallback for older browsers
                    const textarea = document.createElement('textarea');
                    textarea.value = url;
                    document.body.appendChild(textarea);
                    textarea.select();
                    document.execCommand('copy');
                    document.body.removeChild(textarea);
                    toastr.success('{{ 'blog.link_copied'|trans }}');
                });
            });

            // Comment form submission
            $('#comment-form').on('submit', function(e) {
                e.preventDefault();
                
                const form = $(this);
                const content = form.find('textarea[name="content"]').val().trim();
                
                if (!content) {
                    toastr.error('{{ 'blog.comment_required'|trans }}');
                    return;
                }
                
                const button = form.find('button[type="submit"]');
                const originalText = button.text();
                
                button.prop('disabled', true).text('{{ 'blog.posting'|trans }}...');
                
                $.ajax({
                    url: form.attr('action'),
                    method: 'POST',
                    data: { content: content },
                    success: function(data) {
                        if (data.success) {
                            toastr.success('{{ 'blog.comment_success'|trans }}');
                            form[0].reset();
                            // Reload to show new comment (if approved immediately)
                            if (data.approved) {
                                location.reload();
                            }
                        } else {
                            toastr.error(data.message || '{{ 'error.generic'|trans }}');
                        }
                    },
                    error: function() {
                        toastr.error('{{ 'error.generic'|trans }}');
                    },
                    complete: function() {
                        button.prop('disabled', false).text(originalText);
                    }
                });
            });

            // Newsletter subscription
            $('.newsletter-form').on('submit', function(e) {
                e.preventDefault();
                
                const form = $(this);
                const email = form.find('input[name="email"]').val();
                const button = form.find('button[type="submit"]');
                const originalText = button.text();
                
                button.prop('disabled', true).text('{{ 'blog.subscribing'|trans }}...');
                
                $.ajax({
                    url: form.attr('action'),
                    method: 'POST',
                    data: { email: email },
                    success: function(data) {
                        if (data.success) {
                            toastr.success('{{ 'blog.subscribe_success'|trans }}');
                            form[0].reset();
                        } else {
                            toastr.error(data.message || '{{ 'error.generic'|trans }}');
                        }
                    },
                    error: function() {
                        toastr.error('{{ 'error.generic'|trans }}');
                    },
                    complete: function() {
                        button.prop('disabled', false).text(originalText);
                    }
                });
            });
        });
    </script>
{% endblock %}

