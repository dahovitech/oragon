{% extends 'base.html.twig' %}

{% block title %}Blog - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-5">
    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <div class="row mb-4">
                <div class="col-12">
                    <h1 class="display-4 mb-3">Blog</h1>
                    <p class="lead text-muted">Découvrez nos derniers articles sur la technologie, le business et l'innovation.</p>
                </div>
            </div>

            {% if featured_posts %}
            <!-- Featured Posts -->
            <div class="row mb-5">
                <div class="col-12">
                    <h2 class="h4 mb-3">Articles en vedette</h2>
                    <div class="row">
                        {% for post in featured_posts %}
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                {% if post.featuredImage %}
                                <img src="{{ asset('uploads/media/' ~ post.featuredImage.fileName) }}" 
                                     class="card-img-top" 
                                     alt="{{ post.featuredImage.alt ?? post.title }}"
                                     style="height: 200px; object-fit: cover;">
                                {% endif %}
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">
                                        <a href="{{ path('blog_post_show', {slug: post.slug}) }}" class="text-decoration-none">
                                            {{ post.title }}
                                        </a>
                                    </h5>
                                    {% if post.excerpt %}
                                    <p class="card-text text-muted">{{ post.excerpt|slice(0, 120) }}...</p>
                                    {% endif %}
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                {{ post.publishedAt|date('d/m/Y') }}
                                            </small>
                                            {% if post.category %}
                                            <span class="badge" style="background-color: {{ post.category.color ?? '#6c757d' }}">
                                                {{ post.category.name }}
                                            </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endif %}

            <!-- Latest Posts -->
            <div class="row">
                <div class="col-12">
                    <h2 class="h4 mb-4">Derniers articles</h2>
                    
                    {% if posts %}
                        {% for post in posts %}
                        <article class="card mb-4 shadow-sm">
                            <div class="row g-0">
                                {% if post.featuredImage %}
                                <div class="col-md-4">
                                    <img src="{{ asset('uploads/media/' ~ post.featuredImage.fileName) }}" 
                                         class="img-fluid rounded-start h-100" 
                                         alt="{{ post.featuredImage.alt ?? post.title }}"
                                         style="object-fit: cover;">
                                </div>
                                {% endif %}
                                <div class="{{ post.featuredImage ? 'col-md-8' : 'col-12' }}">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div class="d-flex flex-wrap gap-1">
                                                {% if post.category %}
                                                <a href="{{ path('blog_category', {slug: post.category.slug}) }}" 
                                                   class="badge text-decoration-none" 
                                                   style="background-color: {{ post.category.color ?? '#6c757d' }}">
                                                    {{ post.category.name }}
                                                </a>
                                                {% endif %}
                                                {% for tag in post.tags|slice(0, 3) %}
                                                <a href="{{ path('blog_tag', {slug: tag.slug}) }}" 
                                                   class="badge bg-secondary text-decoration-none">
                                                    {{ tag.name }}
                                                </a>
                                                {% endfor %}
                                            </div>
                                            <small class="text-muted">{{ post.publishedAt|date('d/m/Y') }}</small>
                                        </div>
                                        
                                        <h5 class="card-title">
                                            <a href="{{ path('blog_post_show', {slug: post.slug}) }}" 
                                               class="text-decoration-none text-dark">
                                                {{ post.title }}
                                            </a>
                                        </h5>
                                        
                                        {% if post.excerpt %}
                                        <p class="card-text text-muted">{{ post.excerpt }}</p>
                                        {% endif %}
                                        
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <small class="text-muted">
                                                    Par {{ post.author.fullName ?? post.author.email }}
                                                </small>
                                            </div>
                                            <div>
                                                <small class="text-muted">
                                                    <i class="bi bi-eye"></i> {{ post.viewCount }} vues
                                                </small>
                                                {% if post.allowComments %}
                                                <small class="text-muted ms-2">
                                                    <i class="bi bi-chat"></i> {{ post.publishedComments|length }} commentaires
                                                </small>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </article>
                        {% endfor %}

                        <!-- Pagination -->
                        {% if pagination.pages > 1 %}
                        <nav aria-label="Navigation des pages">
                            <ul class="pagination justify-content-center">
                                {% if pagination.page > 1 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('blog_index', {page: pagination.page - 1}) }}">
                                            <i class="bi bi-chevron-left"></i> Précédent
                                        </a>
                                    </li>
                                {% endif %}

                                {% for i in 1..pagination.pages %}
                                    {% if i == pagination.page %}
                                        <li class="page-item active">
                                            <span class="page-link">{{ i }}</span>
                                        </li>
                                    {% elseif i == 1 or i == pagination.pages or (i >= pagination.page - 2 and i <= pagination.page + 2) %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('blog_index', {page: i}) }}">{{ i }}</a>
                                        </li>
                                    {% elseif i == pagination.page - 3 or i == pagination.page + 3 %}
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    {% endif %}
                                {% endfor %}

                                {% if pagination.page < pagination.pages %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('blog_index', {page: pagination.page + 1}) }}">
                                            Suivant <i class="bi bi-chevron-right"></i>
                                        </a>
                                    </li>
                                {% endif %}
                            </ul>
                        </nav>
                        {% endif %}
                    {% else %}
                        <div class="alert alert-info">
                            <h4>Aucun article disponible</h4>
                            <p>Il n'y a pas encore d'articles publiés sur le blog.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="sticky-top" style="top: 2rem;">
                <!-- Search -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Rechercher</h5>
                    </div>
                    <div class="card-body">
                        <form action="{{ path('blog_search') }}" method="get">
                            <div class="input-group">
                                <input type="text" name="q" class="form-control" placeholder="Rechercher un article...">
                                <button class="btn btn-primary" type="submit">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Recent Posts -->
                {% if recent_posts %}
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Articles récents</h5>
                    </div>
                    <div class="card-body">
                        {% for post in recent_posts %}
                        <div class="d-flex mb-3">
                            {% if post.featuredImage %}
                            <img src="{{ asset('uploads/media/' ~ post.featuredImage.fileName) }}" 
                                 class="rounded me-3" 
                                 style="width: 60px; height: 60px; object-fit: cover;"
                                 alt="{{ post.title }}">
                            {% endif %}
                            <div class="flex-grow-1">
                                <h6 class="mb-1">
                                    <a href="{{ path('blog_post_show', {slug: post.slug}) }}" 
                                       class="text-decoration-none">
                                        {{ post.title|slice(0, 50) }}{% if post.title|length > 50 %}...{% endif %}
                                    </a>
                                </h6>
                                <small class="text-muted">{{ post.publishedAt|date('d/m/Y') }}</small>
                            </div>
                        </div>
                        {% if not loop.last %}<hr class="my-2">{% endif %}
                        {% endfor %}
                    </div>
                </div>
                {% endif %}

                <!-- Blog Stats -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Statistiques</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-6">
                                <div class="h4 mb-0 text-primary">{{ pagination.total ?? posts|length }}</div>
                                <small class="text-muted">Articles</small>
                            </div>
                            <div class="col-6">
                                <div class="h4 mb-0 text-success">{{ recent_posts|length }}</div>
                                <small class="text-muted">Cette semaine</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}