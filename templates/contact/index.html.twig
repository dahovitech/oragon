{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block meta_description %}Contactez-nous pour toute question sur nos services de financement. Notre équipe est là pour vous aider.{% endblock %}

{% block body %}
    <!-- Page Header -->
    <section class="page-header">
        <div class="page-header__bg" style="background-image: url({{ asset('assets/images/backgrounds/page-header-bg.jpg') }});"></div>
        <div class="container">
            <div class="page-header__inner">
                <h2 class="page-header__title">Contact</h2>
                <ul class="easilon-breadcrumb list-unstyled">
                    <li><a href="{{ path('home') }}">Accueil</a></li>
                    <li><span>Contact</span></li>
                </ul>
            </div>
        </div>
    </section>

    <!-- Contact Info Section -->
    <section class="contact-info section-space">
        <div class="container">
            <div class="row gutter-y-30">
                <div class="col-lg-4">
                    <div class="contact-info__item wow fadeInUp" data-wow-duration="1500ms" data-wow-delay="000ms">
                        <div class="contact-info__item__icon">
                            <i class="icon-location"></i>
                        </div>
                        <div class="contact-info__item__content">
                            <h3 class="contact-info__item__title">Adresse</h3>
                            <p class="contact-info__item__text">
                                123 Avenue des Finances<br>
                                75001 Paris, France
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="contact-info__item wow fadeInUp" data-wow-duration="1500ms" data-wow-delay="100ms">
                        <div class="contact-info__item__icon">
                            <i class="icon-phone"></i>
                        </div>
                        <div class="contact-info__item__content">
                            <h3 class="contact-info__item__title">Téléphone</h3>
                            <p class="contact-info__item__text">
                                <a href="tel:+33123456789">+33 1 23 45 67 89</a><br>
                                <a href="tel:+33987654321">+33 9 87 65 43 21</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="contact-info__item wow fadeInUp" data-wow-duration="1500ms" data-wow-delay="200ms">
                        <div class="contact-info__item__icon">
                            <i class="icon-mail"></i>
                        </div>
                        <div class="contact-info__item__content">
                            <h3 class="contact-info__item__title">Email</h3>
                            <p class="contact-info__item__text">
                                <a href="mailto:support@loanplatform.com">support@loanplatform.com</a><br>
                                <a href="mailto:info@loanplatform.com">info@loanplatform.com</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Form Section -->
    <section class="contact-form section-space">
        <div class="container">
            <div class="row gutter-y-50">
                <div class="col-lg-8">
                    <div class="contact-form__content wow fadeInLeft" data-wow-duration="1500ms">
                        <div class="sec-title">
                            <h6 class="sec-title__tagline">Contactez-nous</h6>
                            <h3 class="sec-title__title">Envoyez-nous un message</h3>
                            <p class="sec-title__text">
                                Notre équipe est à votre disposition pour répondre à toutes vos questions 
                                concernant nos services de financement.
                            </p>
                        </div>
                        <form action="#" class="contact-form__form">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="contact-form__input-box">
                                        <input type="text" name="name" placeholder="Votre nom" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="contact-form__input-box">
                                        <input type="email" name="email" placeholder="Votre email" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="contact-form__input-box">
                                        <input type="tel" name="phone" placeholder="Votre téléphone">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="contact-form__input-box">
                                        <select name="subject" class="selectpicker">
                                            <option value="">Sujet</option>
                                            <option value="information">Demande d'information</option>
                                            <option value="support">Support technique</option>
                                            <option value="loan">Question sur un prêt</option>
                                            <option value="other">Autre</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="contact-form__input-box">
                                        <textarea name="message" placeholder="Votre message" required></textarea>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="contact-form__btn">
                                        <button type="submit" class="easilon-btn">
                                            <span>Envoyer le message</span>
                                            <span class="easilon-btn__icon">
                                                <i class="icon-double-right-arrow"></i>
                                            </span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="contact-form__sidebar wow fadeInRight" data-wow-duration="1500ms">
                        <div class="contact-form__sidebar__item">
                            <h3 class="contact-form__sidebar__title">Heures d'ouverture</h3>
                            <ul class="list-unstyled contact-form__sidebar__list">
                                <li>
                                    <span class="contact-form__sidebar__day">Lundi - Vendredi</span>
                                    <span class="contact-form__sidebar__time">9h00 - 18h00</span>
                                </li>
                                <li>
                                    <span class="contact-form__sidebar__day">Samedi</span>
                                    <span class="contact-form__sidebar__time">9h00 - 12h00</span>
                                </li>
                                <li>
                                    <span class="contact-form__sidebar__day">Dimanche</span>
                                    <span class="contact-form__sidebar__time">Fermé</span>
                                </li>
                            </ul>
                        </div>
                        <div class="contact-form__sidebar__item">
                            <h3 class="contact-form__sidebar__title">Support d'urgence</h3>
                            <p class="contact-form__sidebar__text">
                                Pour toute urgence concernant votre compte ou vos remboursements, 
                                contactez notre ligne d'assistance disponible 24h/24 :
                            </p>
                            <p class="contact-form__sidebar__emergency">
                                <a href="tel:+33800123456">+33 800 123 456</a>
                            </p>
                        </div>
                        <div class="contact-form__sidebar__item">
                            <h3 class="contact-form__sidebar__title">FAQ</h3>
                            <p class="contact-form__sidebar__text">
                                Consultez notre section FAQ pour trouver rapidement les réponses 
                                aux questions les plus fréquentes.
                            </p>
                            <a href="#" class="easilon-btn easilon-btn--base">
                                <span>Voir la FAQ</span>
                                <span class="easilon-btn__icon">
                                    <i class="icon-double-right-arrow"></i>
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Map Section -->
    <section class="contact-map">
        <div class="contact-map__inner">
            <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.9916256937595!2d2.292292615509614!3d48.85837007928746!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66fec70fb1483%3A0x69b7c55e8779de75!2sChamps-%C3%89lys%C3%A9es%2C%20Paris%2C%20France!5e0!3m2!1sfr!2sfr!4v1632994827890!5m2!1sfr!2sfr" 
                class="contact-map__iframe" 
                allowfullscreen="" 
                loading="lazy">
            </iframe>
        </div>
    </section>
{% endblock %}