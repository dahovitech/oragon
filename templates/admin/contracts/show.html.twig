{% extends 'admin/base.html.twig' %}

{% block title %}Détails du contrat {{ contract.contractNumber }} - Admin EdgeLoan{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .contract-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
        }
        .info-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 1.5rem;
        }
        .payment-row.paid {
            background-color: #d4edda;
        }
        .payment-row.overdue {
            background-color: #f8d7da;
        }
        .status-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
            border-radius: 15px;
        }
        .progress-custom {
            height: 25px;
            border-radius: 15px;
        }
    </style>
{% endblock %}

{% block content %}
<!-- En-tête du contrat -->
<div class="contract-header">
    <div class="d-flex justify-content-between align-items-start">
        <div>
            <h1 class="h2 mb-2">Contrat {{ contract.contractNumber }}</h1>
            <p class="mb-0 opacity-75">
                <i class="fas fa-user me-2"></i>
                {{ user.firstName }} {{ user.lastName }} - {{ user.email }}
            </p>
        </div>
        <div class="text-end">
            <div class="mb-2">
                <span class="badge {{ contract.status == 'ACTIVE' ? 'bg-success' : 
                                     (contract.status == 'COMPLETED' ? 'bg-secondary' : 
                                     (contract.status == 'SUSPENDED' ? 'bg-danger' : 'bg-warning')) }}">
                    {{ contract.status == 'ACTIVE' ? 'Actif' : 
                       (contract.status == 'COMPLETED' ? 'Terminé' : 
                       (contract.status == 'SUSPENDED' ? 'Suspendu' : contract.status)) }}
                </span>
            </div>
            <div class="btn-group">
                <a href="{{ path('admin_contracts_payments', {id: contract.id}) }}" 
                   class="btn btn-light btn-sm">
                    <i class="fas fa-credit-card me-1"></i>
                    Paiements
                </a>
                {% if contract.status == 'ACTIVE' %}
                    <button class="btn btn-warning btn-sm" onclick="suspendContract({{ contract.id }})">
                        <i class="fas fa-pause me-1"></i>
                        Suspendre
                    </button>
                {% elseif contract.status == 'SUSPENDED' %}
                    <button class="btn btn-success btn-sm" onclick="reactivateContract({{ contract.id }})">
                        <i class="fas fa-play me-1"></i>
                        Réactiver
                    </button>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Informations générales -->
    <div class="col-lg-8">
        <div class="card info-card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Informations du Contrat
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <td class="fw-bold">Montant original:</td>
                                <td>{{ contract.originalAmount|number_format(0, ',', ' ') }}€</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Montant restant:</td>
                                <td>{{ contract.remainingAmount|number_format(0, ',', ' ') }}€</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Taux d'intérêt:</td>
                                <td>{{ contract.interestRate }}%</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Durée:</td>
                                <td>{{ contract.durationInMonths }} mois</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <td class="fw-bold">Date de signature:</td>
                                <td>
                                    {% if contract.signedAt %}
                                        {{ contract.signedAt|date('d/m/Y à H:i') }}
                                    {% else %}
                                        <span class="text-muted">Non signé</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Date d'échéance:</td>
                                <td>
                                    {% if contract.maturityDate %}
                                        {{ contract.maturityDate|date('d/m/Y') }}
                                    {% else %}
                                        <span class="text-muted">Non définie</span>
                                    {% endif %}
                                </td>
                            </tr>
                            {% if contract.status == 'SUSPENDED' and contract.suspensionReason %}
                            <tr>
                                <td class="fw-bold">Raison suspension:</td>
                                <td>{{ contract.suspensionReason }}</td>
                            </tr>
                            {% endif %}
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Résumé financier -->
        <div class="card info-card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-line me-2"></i>
                    Résumé Financier
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center mb-4">
                    <div class="col-md-3">
                        <div class="p-3 bg-light rounded">
                            <h4 class="text-primary mb-0">{{ financialSummary.original_amount|number_format(0, ',', ' ') }}€</h4>
                            <small class="text-muted">Montant initial</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="p-3 bg-light rounded">
                            <h4 class="text-info mb-0">{{ financialSummary.total_scheduled|number_format(0, ',', ' ') }}€</h4>
                            <small class="text-muted">Total programmé</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="p-3 bg-light rounded">
                            <h4 class="text-success mb-0">{{ financialSummary.total_paid|number_format(0, ',', ' ') }}€</h4>
                            <small class="text-muted">Total payé</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="p-3 bg-light rounded">
                            <h4 class="text-warning mb-0">{{ financialSummary.total_remaining|number_format(0, ',', ' ') }}€</h4>
                            <small class="text-muted">Restant</small>
                        </div>
                    </div>
                </div>

                <!-- Barre de progression -->
                <div class="mb-3">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="fw-bold">Progression des paiements</span>
                        <span class="fw-bold">{{ financialSummary.payment_progress }}%</span>
                    </div>
                    <div class="progress progress-custom">
                        <div class="progress-bar bg-success" role="progressbar" 
                             style="width: {{ financialSummary.payment_progress }}%"></div>
                    </div>
                </div>

                <div class="row text-center">
                    <div class="col-md-6">
                        <small class="text-muted">Intérêts générés</small>
                        <h5 class="text-info">{{ financialSummary.interest_earned|number_format(0, ',', ' ') }}€</h5>
                    </div>
                    <div class="col-md-6">
                        <small class="text-muted">Taux de remboursement</small>
                        <h5 class="text-success">{{ contractStats.completion_rate }}%</h5>
                    </div>
                </div>
            </div>
        </div>

        <!-- Échéancier -->
        <div class="card info-card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-calendar-alt me-2"></i>
                    Échéancier des Paiements
                </h5>
            </div>
            <div class="card-body">
                {% if payments|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Échéance</th>
                                    <th>Montant</th>
                                    <th>Capital</th>
                                    <th>Intérêts</th>
                                    <th>Statut</th>
                                    <th>Date paiement</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for payment in payments %}
                                    {% set isOverdue = payment.status.value == 'PENDING' and payment.dueDate < date() %}
                                    {% set isPaid = payment.status.value == 'PAID' %}
                                    <tr class="payment-row {{ isPaid ? 'paid' : (isOverdue ? 'overdue' : '') }}">
                                        <td>{{ payment.dueDate|date('d/m/Y') }}</td>
                                        <td class="fw-bold">{{ payment.amount|number_format(2, ',', ' ') }}€</td>
                                        <td>{{ payment.principalAmount|number_format(2, ',', ' ') }}€</td>
                                        <td>{{ payment.interestAmount|number_format(2, ',', ' ') }}€</td>
                                        <td>
                                            {% if isPaid %}
                                                <span class="badge bg-success">Payé</span>
                                            {% elseif isOverdue %}
                                                <span class="badge bg-danger">En retard</span>
                                            {% else %}
                                                <span class="badge bg-warning">En attente</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if payment.paidAt %}
                                                {{ payment.paidAt|date('d/m/Y') }}
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if not isPaid %}
                                                <button class="btn btn-sm btn-success" 
                                                        onclick="markPaymentPaid({{ payment.id }})">
                                                    <i class="fas fa-check me-1"></i>
                                                    Marquer payé
                                                </button>
                                            {% else %}
                                                <span class="text-success">
                                                    <i class="fas fa-check-circle"></i>
                                                </span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-4">
                        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Aucun paiement programmé</h5>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Sidebar avec statistiques -->
    <div class="col-lg-4">
        <!-- Statistiques du contrat -->
        <div class="card info-card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-pie me-2"></i>
                    Statistiques
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    <canvas id="paymentChart" width="200" height="200"></canvas>
                </div>
                
                <div class="row text-center">
                    <div class="col-6">
                        <div class="p-2 bg-light rounded mb-2">
                            <div class="fw-bold text-success">{{ contractStats.paid_payments }}</div>
                            <small class="text-muted">Payés</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-2 bg-light rounded mb-2">
                            <div class="fw-bold text-warning">{{ contractStats.pending_payments }}</div>
                            <small class="text-muted">En attente</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-2 bg-light rounded mb-2">
                            <div class="fw-bold text-danger">{{ contractStats.overdue_payments }}</div>
                            <small class="text-muted">En retard</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-2 bg-light rounded mb-2">
                            <div class="fw-bold text-info">{{ contractStats.total_payments }}</div>
                            <small class="text-muted">Total</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Informations client -->
        <div class="card info-card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-user me-2"></i>
                    Informations Client
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" 
                         style="width: 60px; height: 60px; font-size: 1.5rem;">
                        {{ user.firstName|first }}{{ user.lastName|first }}
                    </div>
                </div>
                
                <table class="table table-borderless table-sm">
                    <tr>
                        <td class="fw-bold">Nom:</td>
                        <td>{{ user.firstName }} {{ user.lastName }}</td>
                    </tr>
                    <tr>
                        <td class="fw-bold">Email:</td>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <td class="fw-bold">Téléphone:</td>
                        <td>{{ user.phoneNumber ?? 'Non renseigné' }}</td>
                    </tr>
                    <tr>
                        <td class="fw-bold">Statut:</td>
                        <td>
                            <span class="badge {{ user.isVerified ? 'bg-success' : 'bg-warning' }}">
                                {{ user.isVerified ? 'Vérifié' : 'Non vérifié' }}
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <td class="fw-bold">Membre depuis:</td>
                        <td>{{ user.createdAt|date('d/m/Y') }}</td>
                    </tr>
                </table>

                <div class="d-grid">
                    <a href="{{ path('admin_user_show', {id: user.id}) }}" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-eye me-1"></i>
                        Voir profil complet
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal pour marquer un paiement comme payé -->
<div class="modal fade" id="paymentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Marquer le paiement comme payé</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="paymentForm">
                    <div class="mb-3">
                        <label for="paymentNote" class="form-label">Note (optionnel):</label>
                        <textarea class="form-control" id="paymentNote" rows="3" 
                                  placeholder="Ajouter une note sur ce paiement..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-success" onclick="confirmPayment()">Confirmer paiement</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        let currentPaymentId = null;

        // Graphique des paiements
        const ctx = document.getElementById('paymentChart').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Payés', 'En attente', 'En retard'],
                datasets: [{
                    data: [
                        {{ contractStats.paid_payments }},
                        {{ contractStats.pending_payments - contractStats.overdue_payments }},
                        {{ contractStats.overdue_payments }}
                    ],
                    backgroundColor: [
                        '#28a745',
                        '#ffc107',
                        '#dc3545'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        function markPaymentPaid(paymentId) {
            currentPaymentId = paymentId;
            const modal = new bootstrap.Modal(document.getElementById('paymentModal'));
            modal.show();
        }

        function confirmPayment() {
            if (!currentPaymentId) return;

            const note = document.getElementById('paymentNote').value;
            
            fetch(`{{ path('admin_contracts_mark_payment_paid', {id: contract.id, paymentId: '__PAYMENT_ID__'}) }}`.replace('__PAYMENT_ID__', currentPaymentId), {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: `note=${encodeURIComponent(note)}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showAlert('success', data.message);
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showAlert('danger', data.error);
                }
                bootstrap.Modal.getInstance(document.getElementById('paymentModal')).hide();
            })
            .catch(error => {
                console.error('Error:', error);
                showAlert('danger', 'Une erreur est survenue');
                bootstrap.Modal.getInstance(document.getElementById('paymentModal')).hide();
            });
        }

        function suspendContract(contractId) {
            const reason = prompt('Raison de la suspension:');
            if (reason === null) return;

            fetch(`{{ path('admin_contracts_suspend', {id: contract.id}) }}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: `reason=${encodeURIComponent(reason)}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showAlert('success', data.message);
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showAlert('danger', data.error);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showAlert('danger', 'Une erreur est survenue');
            });
        }

        function reactivateContract(contractId) {
            if (!confirm('Êtes-vous sûr de vouloir réactiver ce contrat ?')) return;

            fetch(`{{ path('admin_contracts_reactivate', {id: contract.id}) }}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showAlert('success', data.message);
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showAlert('danger', data.error);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showAlert('danger', 'Une erreur est survenue');
            });
        }

        function showAlert(type, message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alertDiv);
            
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.parentNode.removeChild(alertDiv);
                }
            }, 5000);
        }
    </script>
{% endblock %}