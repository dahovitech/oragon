{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'dashboard.reports.title'|trans({}, 'admin') }} - Administration - Oragon{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="bi bi-file-earmark-text me-2 text-primary"></i>{{ 'dashboard.reports.title'|trans({}, 'admin') }}
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="{{ path('admin_dashboard') }}" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-house me-1"></i>{{ 'dashboard.basic'|trans({}, 'admin') }}
            </a>
            <a href="{{ path('admin_dashboard_advanced') }}" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-speedometer2 me-1"></i>{{ 'dashboard.advanced.title'|trans({}, 'admin') }}
            </a>
            <a href="{{ path('admin_dashboard_analytics') }}" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-graph-up me-1"></i>{{ 'dashboard.analytics'|trans({}, 'admin') }}
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-file-text me-2"></i>{{ 'dashboard.reports.coming_soon'|trans({}, 'admin') }}
                </h5>
            </div>
            <div class="card-body text-center py-5">
                <i class="bi bi-file-earmark-bar-graph display-1 text-muted"></i>
                <h3 class="mt-3">{{ 'dashboard.reports.title'|trans({}, 'admin') }}</h3>
                <p class="text-muted">{{ 'dashboard.reports.description'|trans({}, 'admin') }}</p>
                <p class="text-muted">{{ 'dashboard.coming_soon_message'|trans({}, 'admin') }}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}