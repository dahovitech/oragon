{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Gestion des utilisateurs</h1>
                <a href="{{ path('admin_user_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nouvel utilisateur
                </a>
            </div>

            {% for flash_error in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ flash_error }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for flash_success in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ flash_success }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Liste des utilisateurs</h5>
                </div>
                <div class="card-body">
                    {% if users is empty %}
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucun utilisateur trouvé</h5>
                            <p class="text-muted">Commencez par créer le premier utilisateur.</p>
                            <a href="{{ path('admin_user_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Créer un utilisateur
                            </a>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom complet</th>
                                        <th>Email</th>
                                        <th>Rôles</th>
                                        <th>Statut</th>
                                        <th>Dernière connexion</th>
                                        <th>Créé le</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td>{{ user.id }}</td>
                                            <td>
                                                <strong>{{ user.fullName }}</strong>
                                            </td>
                                            <td>
                                                <a href="mailto:{{ user.email }}">{{ user.email }}</a>
                                            </td>
                                            <td>
                                                {% for role in user.roles %}
                                                    {% if role == 'ROLE_SUPER_ADMIN' %}
                                                        <span class="badge bg-danger">Super Admin</span>
                                                    {% elseif role == 'ROLE_ADMIN' %}
                                                        <span class="badge bg-warning">Admin</span>
                                                    {% elseif role == 'ROLE_USER' %}
                                                        <span class="badge bg-info">Utilisateur</span>
                                                    {% else %}
                                                        <span class="badge bg-secondary">{{ role }}</span>
                                                    {% endif %}
                                                {% endfor %}
                                            </td>
                                            <td>
                                                {% if user.isActive %}
                                                    <span class="badge bg-success">Actif</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Inactif</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if user.lastLoginAt %}
                                                    <small class="text-muted">{{ user.lastLoginAt|date('d/m/Y H:i') }}</small>
                                                {% else %}
                                                    <small class="text-muted">Jamais connecté</small>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <small class="text-muted">{{ user.createdAt|date('d/m/Y H:i') }}</small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('admin_user_show', {'id': user.id}) }}" 
                                                       class="btn btn-sm btn-outline-info" title="Voir">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" 
                                                       class="btn btn-sm btn-outline-primary" title="Modifier">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    
                                                    {% if user != app.user %}
                                                        <form method="post" action="{{ path('admin_user_toggle_active', {'id': user.id}) }}" 
                                                              style="display: inline;">
                                                            <button type="submit" 
                                                                    class="btn btn-sm btn-outline-{% if user.isActive %}warning{% else %}success{% endif %}" 
                                                                    title="{% if user.isActive %}Désactiver{% else %}Activer{% endif %}"
                                                                    onclick="return confirm('Êtes-vous sûr de vouloir {% if user.isActive %}désactiver{% else %}activer{% endif %} cet utilisateur ?')">
                                                                <i class="fas fa-{% if user.isActive %}ban{% else %}check{% endif %}"></i>
                                                            </button>
                                                        </form>
                                                        
                                                        <form method="post" action="{{ path('admin_user_delete', {'id': user.id}) }}" 
                                                              style="display: inline;">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                            <button type="submit" 
                                                                    class="btn btn-sm btn-outline-danger" 
                                                                    title="Supprimer"
                                                                    onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ? Cette action est irréversible.')">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    {% else %}
                                                        <span class="badge bg-light text-dark">Vous</span>
                                                    {% endif %}
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}