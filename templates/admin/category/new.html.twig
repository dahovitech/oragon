{% extends 'base.html.twig' %}

{% block title %}{{ category.id ? 'Edit' : 'New' }} Category - Admin{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>{{ category.id ? 'Edit Category: ' ~ category.name : 'Create New Category' }}</h1>
        <a href="{{ path('app_admin_category_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to list
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.slug) }}
                {{ form_row(form.description) }}
                {{ form_row(form.parent) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.position) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.isActive) }}
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> {{ category.id ? 'Update' : 'Create' }} Category
                    </button>
                    <a href="{{ path('app_admin_category_index') }}" class="btn btn-secondary">Cancel</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
