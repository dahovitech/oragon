{% extends 'base.html.twig' %}

{% block title %}Category: {{ category.name }} - Admin{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Category Details</h1>
        <div>
            <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a href="{{ path('app_admin_category_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to list
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table">
                <tbody>
                    <tr>
                        <th width="20%">ID</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ category.name }}</td>
                    </tr>
                    <tr>
                        <th>Slug</th>
                        <td>{{ category.slug }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ category.description|nl2br }}</td>
                    </tr>
                    <tr>
                        <th>Parent Category</th>
                        <td>{{ category.parent ? category.parent.name : '-' }}</td>
                    </tr>
                    <tr>
                        <th>Position</th>
                        <td>{{ category.position ?? '-' }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>
                            {% if category.isActive %}
                                <span class="badge bg-success">Active</span>
                            {% else %}
                                <span class="badge bg-secondary">Inactive</span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
