{% extends 'base.html.twig' %}

{% block title %}Order #{{ order.orderNumber }} - Admin{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Order #{{ order.orderNumber }}</h1>
        <a href="{{ path('app_admin_order_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to list
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header">
                    <h5>Order Items</h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for item in order.items %}
                            <tr>
                                <td>{{ item.productName }}</td>
                                <td>{{ item.quantity }}</td>
                                <td>{{ item.unitPrice }}</td>
                                <td>{{ item.totalPrice }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5>Addresses</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Billing Address</h6>
                            <p>{{ order.billingAddress|nl2br }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Shipping Address</h6>
                            <p>{{ order.shippingAddress|nl2br }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h5>Order Summary</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tbody>
                            <tr>
                                <td>Subtotal:</td>
                                <td class="text-end">{{ order.totalAmount }}</td>
                            </tr>
                            <tr>
                                <td>Shipping:</td>
                                <td class="text-end">{{ order.shippingAmount ?? '0.00' }}</td>
                            </tr>
                            <tr>
                                <td>Tax:</td>
                                <td class="text-end">{{ order.taxAmount ?? '0.00' }}</td>
                            </tr>
                            <tr>
                                <td>Discount:</td>
                                <td class="text-end">-{{ order.discountAmount ?? '0.00' }}</td>
                            </tr>
                            <tr class="fw-bold">
                                <td>Total:</td>
                                <td class="text-end">{{ order.totalAmount }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5>Status</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="{{ path('app_admin_order_status', {'id': order.id}) }}">
                        <div class="mb-3">
                            <label class="form-label">Order Status</label>
                            <select name="status" class="form-select">
                                <option value="pending" {{ order.status == 'pending' ? 'selected' : '' }}>Pending</option>
                                <option value="processing" {{ order.status == 'processing' ? 'selected' : '' }}>Processing</option>
                                <option value="shipped" {{ order.status == 'shipped' ? 'selected' : '' }}>Shipped</option>
                                <option value="delivered" {{ order.status == 'delivered' ? 'selected' : '' }}>Delivered</option>
                                <option value="cancelled" {{ order.status == 'cancelled' ? 'selected' : '' }}>Cancelled</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Payment Status</label>
                            <p><span class="badge bg-{{ order.paymentStatus == 'paid' ? 'success' : 'warning' }}">{{ order.paymentStatus }}</span></p>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Update Status</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
