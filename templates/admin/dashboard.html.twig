{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Chart data from backend
    const chartData = {{ chart_data|json_encode|raw }};
    
    // Initialize main chart
    const ctx = document.getElementById('mainChart').getContext('2d');
    let currentChart = null;
    
    function createChart(type) {
        if (currentChart) {
            currentChart.destroy();
        }
        
        let data, label, color;
        
        switch(type) {
            case 'users':
                data = chartData.user_registration.data;
                label = 'Inscriptions utilisateurs';
                color = 'rgba(54, 162, 235, 0.8)';
                break;
            case 'loans':
                data = chartData.loan_applications.data;
                label = 'Demandes de pr√™ts';
                color = 'rgba(75, 192, 192, 0.8)';
                break;
            case 'amounts':
                data = chartData.loan_amounts.data;
                label = 'Montants demand√©s (FCFA)';
                color = 'rgba(255, 206, 86, 0.8)';
                break;
        }
        
        currentChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: chartData.user_registration.labels,
                datasets: [{
                    label: label,
                    data: data,
                    borderColor: color,
                    backgroundColor: color.replace('0.8', '0.2'),
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    }
    
    // Initialize with users chart
    createChart('users');
    
    // Chart type switcher
    document.querySelectorAll('input[name="chart-type"]').forEach(radio => {
        radio.addEventListener('change', function() {
            if (this.checked) {
                const type = this.id.replace('chart-', '');
                createChart(type);
            }
        });
    });
    
    // Activity filter
    document.getElementById('activity-filter').addEventListener('change', function() {
        const filterType = this.value;
        const activities = document.querySelectorAll('.activity-item');
        
        activities.forEach(item => {
            if (filterType === 'all' || item.dataset.type === filterType) {
                item.style.display = 'block';
            } else {
                item.style.display = 'none';
            }
        });
    });
});
</script>
