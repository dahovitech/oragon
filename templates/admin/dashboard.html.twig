{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard Administration{% endblock %}

{% block admin_content %}
    <div class="admin-header">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1>Dashboard Administration</h1>
                <p class="admin-subtitle">Vue d'ensemble de la plateforme</p>
            </div>
            <div class="col-lg-6">
                <div class="admin-actions">
                    <span class="text-muted">Dernière mise à jour: {{ 'now'|date('d/m/Y H:i') }}</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Statistics -->
    <div class="stats-grid">
        <div class="row">
            <!-- Users Section -->
            <div class="col-lg-3 col-md-6">
                <div class="stat-card stat-card--primary">
                    <div class="stat-card__icon">
                        <i class="fa fa-users"></i>
                    </div>
                    <div class="stat-card__content">
                        <h3>{{ stats.totalUsers }}</h3>
                        <p>Utilisateurs total</p>
                        <small>{{ stats.verifiedUsers }} vérifiés</small>
                    </div>
                </div>
            </div>
            
            <!-- Verifications Section -->
            <div class="col-lg-3 col-md-6">
                <div class="stat-card stat-card--warning">
                    <div class="stat-card__icon">
                        <i class="fa fa-clock"></i>
                    </div>
                    <div class="stat-card__content">
                        <h3>{{ stats.pendingVerifications }}</h3>
                        <p>Vérifications en attente</p>
                        <small>{{ stats.rejectedVerifications }} rejetées</small>
                    </div>
                </div>
            </div>
            
            <!-- Loan Applications Section -->
            <div class="col-lg-3 col-md-6">
                <div class="stat-card stat-card--info">
                    <div class="stat-card__icon">
                        <i class="fa fa-file-alt"></i>
                    </div>
                    <div class="stat-card__content">
                        <h3>{{ stats.totalApplications }}</h3>
                        <p>Demandes de prêt</p>
                        <small>{{ stats.pendingApplications + stats.underReviewApplications }} à traiter</small>
                    </div>
                </div>
            </div>
            
            <!-- Contracts Section -->
            <div class="col-lg-3 col-md-6">
                <div class="stat-card stat-card--success">
                    <div class="stat-card__icon">
                        <i class="fa fa-file-contract"></i>
                    </div>
                    <div class="stat-card__content">
                        <h3>{{ stats.totalContracts }}</h3>
                        <p>Contrats générés</p>
                        <small>{{ stats.signedContracts }} signés</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Statistics -->
    <div class="row gutter-x-30">
        <!-- Loan Applications Overview -->
        <div class="col-lg-6">
            <div class="admin-card">
                <div class="admin-card__header">
                    <h3>État des demandes de prêt</h3>
                    <a href="{{ path('admin_loan_applications_index') }}" class="btn btn-sm btn-outline-primary">
                        Voir tout
                    </a>
                </div>
                <div class="admin-card__body">
                    <div class="progress-stats">
                        <div class="progress-stat">
                            <div class="progress-stat__label">
                                <span>En attente</span>
                                <span class="badge badge-warning">{{ stats.pendingApplications }}</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-warning" style="width: {{ stats.totalApplications > 0 ? (stats.pendingApplications / stats.totalApplications * 100)|round : 0 }}%"></div>
                            </div>
                        </div>
                        
                        <div class="progress-stat">
                            <div class="progress-stat__label">
                                <span>En étude</span>
                                <span class="badge badge-info">{{ stats.underReviewApplications }}</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-info" style="width: {{ stats.totalApplications > 0 ? (stats.underReviewApplications / stats.totalApplications * 100)|round : 0 }}%"></div>
                            </div>
                        </div>
                        
                        <div class="progress-stat">
                            <div class="progress-stat__label">
                                <span>Approuvées</span>
                                <span class="badge badge-success">{{ stats.approvedApplications }}</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-success" style="width: {{ stats.totalApplications > 0 ? (stats.approvedApplications / stats.totalApplications * 100)|round : 0 }}%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contracts Overview -->
        <div class="col-lg-6">
            <div class="admin-card">
                <div class="admin-card__header">
                    <h3>État des contrats</h3>
                    <a href="{{ path('admin_contracts_index') }}" class="btn btn-sm btn-outline-primary">
                        Voir tout
                    </a>
                </div>
                <div class="admin-card__body">
                    <div class="contract-stats">
                        <div class="contract-stat">
                            <div class="contract-stat__icon">
                                <i class="fa fa-file text-primary"></i>
                            </div>
                            <div class="contract-stat__content">
                                <h4>{{ stats.totalContracts }}</h4>
                                <p>Total générés</p>
                            </div>
                        </div>
                        
                        <div class="contract-stat">
                            <div class="contract-stat__icon">
                                <i class="fa fa-signature text-success"></i>
                            </div>
                            <div class="contract-stat__content">
                                <h4>{{ stats.signedContracts }}</h4>
                                <p>Signés</p>
                            </div>
                        </div>
                        
                        <div class="contract-stat">
                            <div class="contract-stat__icon">
                                <i class="fa fa-check-circle text-info"></i>
                            </div>
                            <div class="contract-stat__content">
                                <h4>{{ stats.activeContracts }}</h4>
                                <p>Actifs</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row gutter-x-30">
        <!-- Recent Applications -->
        <div class="col-lg-6">
            <div class="admin-card">
                <div class="admin-card__header">
                    <h3>Demandes récentes</h3>
                    <a href="{{ path('admin_loan_applications_index') }}" class="btn btn-sm btn-outline-primary">
                        Voir toutes
                    </a>
                </div>
                <div class="admin-card__body">
                    {% if recentApplications|length > 0 %}
                        <div class="recent-items">
                            {% for application in recentApplications %}
                                <div class="recent-item">
                                    <div class="recent-item__icon">
                                        <i class="fa fa-file-alt text-primary"></i>
                                    </div>
                                    <div class="recent-item__content">
                                        <h5>{{ application.loanType.name }}</h5>
                                        <p>{{ application.user.email }} - {{ application.requestedAmount|number_format(0, ',', ' ') }}€</p>
                                        <small>{{ application.submittedAt|date('d/m/Y H:i') }}</small>
                                    </div>
                                    <div class="recent-item__status">
                                        <span class="badge badge-{{ application.status|lower|replace({'_': '-'}) }}">
                                            {{ application.status }}
                                        </span>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted">Aucune demande récente.</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Recent Verifications -->
        <div class="col-lg-6">
            <div class="admin-card">
                <div class="admin-card__header">
                    <h3>Vérifications récentes</h3>
                    <a href="{{ path('admin_verifications') }}" class="btn btn-sm btn-outline-primary">
                        Voir toutes
                    </a>
                </div>
                <div class="admin-card__body">
                    {% if recentVerifications|length > 0 %}
                        <div class="recent-items">
                            {% for verification in recentVerifications %}
                                <div class="recent-item">
                                    <div class="recent-item__icon">
                                        <i class="fa fa-user-check text-warning"></i>
                                    </div>
                                    <div class="recent-item__content">
                                        <h5>{{ verification.verificationType }}</h5>
                                        <p>{{ verification.user.email }}</p>
                                        <small>{{ verification.submittedAt|date('d/m/Y H:i') }}</small>
                                    </div>
                                    <div class="recent-item__status">
                                        <span class="badge badge-{{ verification.status|lower }}">
                                            {{ verification.status }}
                                        </span>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted">Aucune vérification récente.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="admin-card">
        <div class="admin-card__header">
            <h3>Actions rapides</h3>
        </div>
        <div class="admin-card__body">
            <div class="quick-actions-grid">
                <a href="{{ path('admin_loan_applications_index', {status: 'SUBMITTED'}) }}" class="quick-action">
                    <div class="quick-action__icon">
                        <i class="fa fa-clock text-warning"></i>
                    </div>
                    <div class="quick-action__content">
                        <h4>{{ stats.pendingApplications }}</h4>
                        <p>Demandes à traiter</p>
                    </div>
                </a>
                
                <a href="{{ path('admin_verifications', {status: 'PENDING'}) }}" class="quick-action">
                    <div class="quick-action__icon">
                        <i class="fa fa-user-check text-info"></i>
                    </div>
                    <div class="quick-action__content">
                        <h4>{{ stats.pendingVerifications }}</h4>
                        <p>Vérifications en attente</p>
                    </div>
                </a>
                
                <a href="{{ path('admin_contracts_index', {status: 'pending'}) }}" class="quick-action">
                    <div class="quick-action__icon">
                        <i class="fa fa-file-contract text-success"></i>
                    </div>
                    <div class="quick-action__content">
                        <h4>{{ stats.totalContracts - stats.signedContracts }}</h4>
                        <p>Contrats à signer</p>
                    </div>
                </a>
                
                <a href="{{ path('admin_loan_applications_stats') }}" class="quick-action">
                    <div class="quick-action__icon">
                        <i class="fa fa-chart-bar text-primary"></i>
                    </div>
                    <div class="quick-action__content">
                        <h4><i class="fa fa-chart-line"></i></h4>
                        <p>Statistiques avancées</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
{% endblock %}

