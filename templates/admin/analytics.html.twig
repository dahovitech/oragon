function startRealTimeUpdates() {
    setInterval(updateRealTimeData, 30000); // Mise √† jour toutes les 30 secondes
    updateRecentActivity();
}

function updateRealTimeData() {
    if (!document.getElementById('autoRefresh').checked) return;
    
    // Simuler des donn√©es temps r√©el
    const now = new Date();
    const timeLabel = now.toLocaleTimeString();
    const value = Math.floor(Math.random() * 20) + 5;
    
    const chart = window.realTimeChart;
    chart.data.labels.push(timeLabel);
    chart.data.datasets[0].data.push(value);
    
    // Garder seulement les 20 derniers points
    if (chart.data.labels.length > 20) {
        chart.data.labels.shift();
        chart.data.datasets[0].data.shift();
    }
    
    chart.update();
}

