{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'services.edit_title'|trans({}, 'admin') }} - {{ service.title ?? service.slug }} - Administration - Oragon{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="bi bi-pencil me-2 text-primary"></i>{{ 'services.edit_title'|trans({}, 'admin') }}
        <small class="text-muted">- {{ service.title ?? service.slug }}</small>
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="{{ path('admin_service_edit_translations', {'id': service.id}) }}" class="btn btn-outline-success">
                <i class="bi bi-translate me-2"></i>{{ 'translations.edit'|trans({}, 'admin') }}
            </a>
            <a href="{{ path('admin_service_show', {'id': service.id}) }}" class="btn btn-outline-info">
                <i class="bi bi-eye me-2"></i>{{ 'common.actions.view'|trans({}, 'admin') }}
            </a>
        </div>
        <a href="{{ path('admin_service_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>{{ 'services.actions.back_to_list'|trans({}, 'admin') }}
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.slug) }}
                            {{ form_widget(form.slug, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.slug) }}
                            {{ form_help(form.slug) }}
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.sortOrder) }}
                            {{ form_widget(form.sortOrder, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.sortOrder) }}
                            {{ form_help(form.sortOrder) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.image) }}
                            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.image) }}
                            {% if service.image %}
                                <div class="mt-2">
                                    <img src="{{ asset('upload/media/' ~ service.image.fileName) }}" 
                                         alt="{{ service.image.alt }}" 
                                         class="img-thumbnail" 
                                         style="max-width: 200px; max-height: 150px; object-fit: cover;">
                                    <div class="small text-muted mt-1">Image actuelle</div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.isActive, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                            {{ form_errors(form.isActive) }}
                            {{ form_help(form.isActive) }}
                        </div>
                        
                        {% if service.translations|length > 0 %}
                            <div class="mb-3">
                                <label class="form-label">{{ 'translations.progress'|trans({}, 'admin') }}</label>
                                <div class="translation-progress">
                                    {% for translation in service.translations %}
                                        {% set completion = translation.getCompletionPercentage() %}
                                        {% set badgeClass = completion == 100 ? 'success' : (completion >= 50 ? 'warning' : 'danger') %}
                                        
                                        <div class="d-flex align-items-center mb-1">
                                            <span class="badge bg-secondary me-2">{{ translation.language.code|upper }}</span>
                                            <div class="progress flex-grow-1" style="height: 15px;">
                                                <div class="progress-bar bg-{{ badgeClass }}" 
                                                     style="width: {{ completion }}%"
                                                     title="{{ translation.language.name }}: {{ completion }}%">
                                                </div>
                                            </div>
                                            <span class="ms-2 small">{{ completion }}%</span>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Conseils :</strong> Modifiez les paramètres du service ici. Pour gérer les traductions (titre, description, contenu), utilisez le bouton "Gérer les traductions" en haut à droite.
                </div>

                {{ form_rest(form) }}
            </div>

            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <a href="{{ path('admin_service_index') }}" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>{{ 'common.actions.cancel'|trans({}, 'admin') }}
                    </a>
                    <div>
                        <a href="{{ path('admin_service_edit_translations', {'id': service.id}) }}" class="btn btn-success me-2">
                            <i class="bi bi-translate me-2"></i>{{ 'translations.edit'|trans({}, 'admin') }}
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>{{ 'common.actions.save'|trans({}, 'admin') }}
                        </button>
                    </div>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-format du slug
    const slugField = document.querySelector('input[name="service[slug]"]');
    
    if (slugField) {
        slugField.addEventListener('input', function() {
            this.value = this.value
                .toLowerCase()
                .replace(/[^a-z0-9\s-]/g, '')
                .replace(/\s+/g, '-')
                .replace(/-+/g, '-')
                .replace(/^-|-$/g, '');
        });
    }
});
</script>

<style>
.translation-progress {
    min-width: 200px;
}
</style>
{% endblock %}