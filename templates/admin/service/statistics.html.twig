{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'services.statistics'|trans({}, 'admin') }} - Administration - Oragon{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="bi bi-bar-chart me-2 text-info"></i>{{ 'services.statistics'|trans({}, 'admin') }}
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('admin_service_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>{{ 'services.actions.back_to_list'|trans({}, 'admin') }}
        </a>
    </div>
</div>

{% if statistics %}
<!-- Vue d'ensemble -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <i class="bi bi-grid-3x3-gap-fill text-primary mb-2" style="font-size: 2.5rem;"></i>
                <h3 class="card-title">{{ statistics.total_services }}</h3>
                <p class="card-text text-muted">{{ 'services.total'|trans({}, 'admin') }}</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <i class="bi bi-translate text-success mb-2" style="font-size: 2.5rem;"></i>
                <h3 class="card-title">{{ statistics.languages|length }}</h3>
                <p class="card-text text-muted">{{ 'languages.count'|trans({}, 'admin') }}</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <i class="bi bi-percent text-warning mb-2" style="font-size: 2.5rem;"></i>
                <h3 class="card-title">{{ statistics.global_completion }}%</h3>
                <p class="card-text text-muted">{{ 'translations.global_completion'|trans({}, 'admin') }}</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <i class="bi bi-file-text text-info mb-2" style="font-size: 2.5rem;"></i>
                <h3 class="card-title">{{ statistics.total_translations }}</h3>
                <p class="card-text text-muted">{{ 'translations.count'|trans({}, 'admin') }}</p>
            </div>
        </div>
    </div>
</div>

<!-- Détails par langue -->
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-globe me-2"></i>{{ 'translations.by_language'|trans({}, 'admin') }}
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>{{ 'languages.fields.name'|trans({}, 'admin') }}</th>
                                <th>{{ 'translations.complete'|trans({}, 'admin') }}</th>
                                <th>{{ 'translations.incomplete'|trans({}, 'admin') }}</th>
                                <th>{{ 'translations.missing'|trans({}, 'admin') }}</th>
                                <th>{{ 'translations.completion'|trans({}, 'admin') }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for locale, data in statistics.by_language %}
                                {% set completion = data.total > 0 ? ((data.complete / data.total) * 100)|round : 0 %}
                                {% set badgeClass = completion == 100 ? 'success' : (completion >= 50 ? 'warning' : 'danger') %}
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary me-2">{{ locale|upper }}</span>
                                        {{ data.language.name }}
                                    </td>
                                    <td>
                                        <span class="badge bg-success">{{ data.complete }}</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-warning">{{ data.incomplete }}</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-danger">{{ data.missing }}</span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="progress flex-grow-1 me-2" style="height: 20px; min-width: 100px;">
                                                <div class="progress-bar bg-{{ badgeClass }}" 
                                                     style="width: {{ completion }}%"
                                                     title="{{ completion }}%">
                                                </div>
                                            </div>
                                            <span class="badge bg-{{ badgeClass }}">{{ completion }}%</span>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Progression globale -->
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-pie-chart me-2"></i>{{ 'translations.global_progress'|trans({}, 'admin') }}
                </h5>
            </div>
            <div class="card-body text-center">
                <div class="position-relative d-inline-block">
                    <div class="progress mx-auto" style="width: 120px; height: 120px; border-radius: 50%; background: conic-gradient(#28a745 {{ statistics.global_completion * 3.6 }}deg, #e9ecef 0deg);">
                        <div class="position-absolute top-50 start-50 translate-middle">
                            <h3 class="mb-0">{{ statistics.global_completion }}%</h3>
                            <small class="text-muted">Complet</small>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Complètes</span>
                        <span class="fw-bold text-success">{{ statistics.complete_translations }}</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Incomplètes</span>
                        <span class="fw-bold text-warning">{{ statistics.incomplete_translations }}</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Manquantes</span>
                        <span class="fw-bold text-danger">{{ statistics.missing_translations }}</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions rapides -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-lightning me-2"></i>{{ 'services.quick_actions'|trans({}, 'admin') }}
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('admin_service_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>{{ 'services.actions.new'|trans({}, 'admin') }}
                    </a>
                    <a href="{{ path('admin_language_index') }}" class="btn btn-outline-success">
                        <i class="bi bi-globe me-2"></i>{{ 'languages.title'|trans({}, 'admin') }}
                    </a>
                    <a href="{{ path('admin_translation_index') }}" class="btn btn-outline-info">
                        <i class="bi bi-translate me-2"></i>{{ 'translations.title'|trans({}, 'admin') }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Traductions récemment mises à jour -->
{% if recent_translations|length > 0 %}
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-clock me-2"></i>Traductions récemment mises à jour
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Service</th>
                                <th>Langue</th>
                                <th>Titre</th>
                                <th>État</th>
                                <th>Mis à jour</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for translation in recent_translations %}
                                {% set completion = translation.getCompletionPercentage() %}
                                {% set badgeClass = completion == 100 ? 'success' : (completion >= 50 ? 'warning' : 'danger') %}
                                <tr>
                                    <td>
                                        <strong>{{ translation.service.title ?? translation.service.slug }}</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">{{ translation.language.code|upper }}</span>
                                        {{ translation.language.name }}
                                    </td>
                                    <td>
                                        {{ translation.title|default('—') }}
                                    </td>
                                    <td>
                                        <span class="badge bg-{{ badgeClass }}">{{ completion }}%</span>
                                    </td>
                                    <td>
                                        <small>{{ translation.updatedAt|date('d/m/Y H:i') }}</small>
                                    </td>
                                    <td>
                                        <a href="{{ path('admin_service_edit_translations', {'id': translation.service.id}) }}" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}

{% else %}
<div class="card">
    <div class="card-body text-center py-5">
        <i class="bi bi-bar-chart text-muted mb-3" style="font-size: 4rem;"></i>
        <h4>Aucune statistique disponible</h4>
        <p class="text-muted">Il n'y a pas encore de services ou de traductions à analyser.</p>
        <a href="{{ path('admin_service_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>{{ 'services.actions.new'|trans({}, 'admin') }}
        </a>
    </div>
</div>
{% endif %}

<style>
.progress {
    background: conic-gradient(#28a745 var(--percentage, 0deg), #e9ecef 0deg);
}
</style>
{% endblock %}