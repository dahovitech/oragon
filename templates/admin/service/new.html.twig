{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'services.new_title'|trans({}, 'admin') }} - Administration - Oragon{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="bi bi-plus-circle me-2 text-primary"></i>{{ 'services.new_title'|trans({}, 'admin') }}
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('admin_service_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>{{ 'services.actions.back_to_list'|trans({}, 'admin') }}
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.slug) }}
                            {{ form_widget(form.slug, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.slug) }}
                            {{ form_help(form.slug) }}
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.sortOrder) }}
                            {{ form_widget(form.sortOrder, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.sortOrder) }}
                            {{ form_help(form.sortOrder) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.image) }}
                            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.image) }}
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.isActive, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                            {{ form_errors(form.isActive) }}
                            {{ form_help(form.isActive) }}
                        </div>
                    </div>
                </div>

                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    {{ 'services.new_help'|trans({}, 'admin') }}
                </div>

                {{ form_rest(form) }}
            </div>

            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <a href="{{ path('admin_service_index') }}" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>{{ 'common.actions.cancel'|trans({}, 'admin') }}
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-2"></i>{{ 'common.actions.save'|trans({}, 'admin') }}
                    </button>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-générer le slug à partir du titre si disponible
    const slugField = document.querySelector('input[name="service[slug]"]');
    
    if (slugField) {
        slugField.addEventListener('input', function() {
            // Auto-format du slug
            this.value = this.value
                .toLowerCase()
                .replace(/[^a-z0-9\s-]/g, '')
                .replace(/\s+/g, '-')
                .replace(/-+/g, '-')
                .replace(/^-|-$/g, '');
        });
    }
});
</script>
{% endblock %}
