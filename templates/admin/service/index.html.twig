{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'services.title'|trans({}, 'admin') }} - Administration - Oragon{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="bi bi-grid-3x3-gap-fill me-2 text-primary"></i>{{ 'services.title'|trans({}, 'admin') }}
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('admin_service_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>{{ 'services.actions.new'|trans({}, 'admin') }}
        </a>
    </div>
</div>

{% if statistics %}
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <i class="bi bi-grid-3x3-gap-fill text-primary mb-2" style="font-size: 2rem;"></i>
                <h5 class="card-title">{{ statistics.total_services }}</h5>
                <p class="card-text text-muted">{{ 'services.total'|trans({}, 'admin') }}</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <i class="bi bi-translate text-success mb-2" style="font-size: 2rem;"></i>
                <h5 class="card-title">{{ statistics.languages|length }}</h5>
                <p class="card-text text-muted">{{ 'languages.count'|trans({}, 'admin') }}</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-center">
            <div class="card-body">
                <i class="bi bi-percent text-warning mb-2" style="font-size: 2rem;"></i>
                <h5 class="card-title">{{ statistics.global_completion }}%</h5>
                <p class="card-text text-muted">{{ 'translations.global_completion'|trans({}, 'admin') }}</p>
                <div class="progress">
                    <div class="progress-bar bg-warning" style="width: {{ statistics.global_completion }}%"></div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}

{% if services|length > 0 %}
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>{{ 'services.fields.title'|trans({}, 'admin') }}</th>
                        <th>{{ 'services.fields.slug'|trans({}, 'admin') }}</th>
                        <th>{{ 'services.fields.image'|trans({}, 'admin') }}</th>
                        <th>{{ 'services.fields.status'|trans({}, 'admin') }}</th>
                        <th>{{ 'services.fields.sort_order'|trans({}, 'admin') }}</th>
                        <th>{{ 'translations.progress'|trans({}, 'admin') }}</th>
                        <th class="text-center">{{ 'common.actions.title'|trans({}, 'admin') }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for service in services %}
                        {% set translationStats = service.translationStats %}
                        <tr>
                            <td>
                                <strong>{{ service.title ?? service.slug }}</strong>
                                {% if service.description %}
                                    <br><small class="text-muted">{{ service.description|slice(0, 100) }}{% if service.description|length > 100 %}...{% endif %}</small>
                                {% endif %}
                            </td>
                            <td>
                                <code>{{ service.slug }}</code>
                            </td>
                            <td>
                                {% if service.image %}
                                    <img src="{{ asset('upload/media/' ~ service.image.fileName) }}" 
                                         alt="{{ service.image.alt }}" 
                                         class="img-thumbnail" 
                                         style="width: 50px; height: 50px; object-fit: cover;">
                                {% else %}
                                    <span class="text-muted">{{ 'common.no_image'|trans({}, 'admin') }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if service.isActive %}
                                    <span class="badge bg-success">{{ 'common.status.active'|trans({}, 'admin') }}</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ 'common.status.inactive'|trans({}, 'admin') }}</span>
                                {% endif %}
                            </td>
                            <td>{{ service.sortOrder }}</td>
                            <td>
                                <div class="translation-progress">
                                    {% for locale, stats in translationStats %}
                                        {% set language = stats.language %}
                                        {% set completion = stats.completion %}
                                        {% set badgeClass = completion == 100 ? 'success' : (completion >= 50 ? 'warning' : 'danger') %}
                                        
                                        <div class="d-flex align-items-center mb-1">
                                            <span class="badge bg-secondary me-2">{{ language.code|upper }}</span>
                                            <div class="progress flex-grow-1" style="height: 15px;">
                                                <div class="progress-bar bg-{{ badgeClass }}" 
                                                     style="width: {{ completion }}%"
                                                     title="{{ language.name }}: {{ completion }}%">
                                                </div>
                                            </div>
                                            <span class="ms-2 small">{{ completion }}%</span>
                                        </div>
                                    {% endfor %}
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('admin_service_show', {'id': service.id}) }}" 
                                       class="btn btn-sm btn-outline-info" 
                                       title="{{ 'common.actions.view'|trans({}, 'admin') }}">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_service_edit', {'id': service.id}) }}" 
                                       class="btn btn-sm btn-outline-primary" 
                                       title="{{ 'common.actions.edit'|trans({}, 'admin') }}">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="{{ path('admin_service_edit_translations', {'id': service.id}) }}" 
                                       class="btn btn-sm btn-outline-success" 
                                       title="{{ 'translations.edit'|trans({}, 'admin') }}">
                                        <i class="bi bi-translate"></i>
                                    </a>
                                    <button type="button" 
                                            class="btn btn-sm btn-outline-danger" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteModal{{ service.id }}"
                                            title="{{ 'common.actions.delete'|trans({}, 'admin') }}">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>

                                <!-- Modal de suppression -->
                                <div class="modal fade" id="deleteModal{{ service.id }}" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">{{ 'services.confirm_delete'|trans({}, 'admin') }}</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                {{ 'services.confirm_delete_message'|trans({'%name%': service.title ?? service.slug}, 'admin') }}
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                    {{ 'common.actions.cancel'|trans({}, 'admin') }}
                                                </button>
                                                <form method="post" action="{{ path('admin_service_delete', {'id': service.id}) }}" style="display: inline-block;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                                                    <button type="submit" class="btn btn-danger">
                                                        {{ 'common.actions.delete'|trans({}, 'admin') }}
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% else %}
<div class="card">
    <div class="card-body text-center py-5">
        <i class="bi bi-grid-3x3-gap-fill text-muted mb-3" style="font-size: 4rem;"></i>
        <h4>{{ 'services.no_services'|trans({}, 'admin') }}</h4>
        <p class="text-muted">{{ 'services.create_first'|trans({}, 'admin') }}</p>
        <a href="{{ path('admin_service_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>{{ 'services.actions.new'|trans({}, 'admin') }}
        </a>
    </div>
</div>
{% endif %}

<style>
.translation-progress {
    min-width: 200px;
}
</style>
{% endblock %}
