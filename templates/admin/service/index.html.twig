{% extends 'admin/base.html.twig' %}

{% block title %}Services - Administration - Oragon{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="bi bi-list-ul me-2 text-primary"></i>Gestion des services
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('admin_service_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Nouveau service
        </a>
    </div>
</div>

{% if services|length > 0 %}
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Slug</th>
                            <th>Traductions</th>
                            {% for language in languages %}
                                <th class="text-center">
                                    <span class="badge bg-info">{{ language.code|upper }}</span>
                                </th>
                            {% endfor %}
                            <th>Statut</th>
                            <th>Mis à jour</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for service in services %}
                        <tr class="{% if not service.active %}table-secondary{% endif %}">
                            <td>
                                <strong>{{ service.slug }}</strong>
                                <br>
                                <small class="text-muted">ID: {{ service.id }}</small>
                            </td>
                            <td>
                                <span class="badge bg-info">{{ service.translations|length }}/{{ languages|length }}</span>
                            </td>
                            {% for language in languages %}
                                {% set translation = service.getTranslationForLanguage(language) %}
                                <td class="text-center">
                                    {% if translation and translation.title %}
                                        <i class="bi bi-check-circle-fill text-success" title="{{ translation.title }}"></i>
                                    {% else %}
                                        <i class="bi bi-x-circle text-muted" title="Pas de traduction"></i>
                                    {% endif %}
                                </td>
                            {% endfor %}
                            <td>
                                {% if service.active %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-secondary">Inactif</span>
                                {% endif %}
                            </td>
                            <td>
                                <small class="text-muted">{{ service.updatedAt|date('d/m/Y H:i') }}</small>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('admin_service_show', {id: service.id}) }}" 
                                       class="btn btn-sm btn-outline-info" title="Voir">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_service_edit', {id: service.id}) }}" 
                                       class="btn btn-sm btn-outline-primary" title="Modifier">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post" action="{{ path('admin_service_toggle_status', {id: service.id}) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle_status' ~ service.id) }}">
                                        <button type="submit" 
                                                class="btn btn-sm btn-outline-{{ service.active ? 'warning' : 'success' }}" 
                                                title="{{ service.active ? 'Désactiver' : 'Activer' }}">
                                            <i class="bi bi-{{ service.active ? 'pause' : 'play' }}-fill"></i>
                                        </button>
                                    </form>
                                    <form method="post" action="{{ path('admin_service_duplicate', {id: service.id}) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('duplicate' ~ service.id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-secondary" title="Dupliquer">
                                            <i class="bi bi-files"></i>
                                        </button>
                                    </form>
                                    <form method="post" action="{{ path('admin_service_delete', {id: service.id}) }}" 
                                          class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce service ?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% else %}
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-list-ul display-1 text-muted mb-4"></i>
            <h4 class="text-muted mb-3">Aucun service créé</h4>
            <p class="text-muted mb-4">Commencez par créer votre premier service pour pouvoir gérer les traductions.</p>
            <a href="{{ path('admin_service_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Créer un service
            </a>
        </div>
    </div>
{% endif %}
{% endblock %}