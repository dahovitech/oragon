{% extends 'base.html.twig' %}

{% block title %}Mes Contrats - Oragon{% endblock %}

{% block page_header %}
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="page-title">üìÑ Mes Contrats de Pr√™t</h1>
                <div class="page-subtitle">G√©rez vos contrats de pr√™t et leur statut</div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
<div class="container-xl">
    {% if contracts %}
        <div class="row">
            {% for contract in contracts %}
            <div class="col-lg-6 col-xl-4 mb-4">
                <div class="card">
                    <div class="card-status-start bg-{{ contract.statusBadgeClass }}"></div>
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="card-title">{{ contract.contractNumber }}</h3>
                            <span class="badge {{ contract.statusBadgeClass }} text-white">
                                {{ contract.statusDisplayName }}
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="text-muted small">Montant</div>
                                <div class="h4 text-primary">{{ contract.contractAmount|number_format(0, ',', ' ') }} FCFA</div>
                            </div>
                            <div class="col-6">
                                <div class="text-muted small">Mensualit√©</div>
                                <div class="h5">{{ contract.monthlyPayment|number_format(0, ',', ' ') }} FCFA</div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="text-muted small">Dur√©e</div>
                                <div>{{ contract.durationMonths }} mois</div>
                            </div>
                            <div class="col-6">
                                <div class="text-muted small">Taux</div>
                                <div>{{ contract.interestRate }}%</div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="text-muted small">P√©riode du contrat</div>
                            <div>{{ contract.startDate|date('d/m/Y') }} - {{ contract.endDate|date('d/m/Y') }}</div>
                        </div>

                        {% if contract.status == 'sent' and not contract.isSigned %}
                            <div class="alert alert-warning" role="alert">
                                <i class="fas fa-exclamation-triangle"></i>
                                Ce contrat attend votre signature √©lectronique.
                            </div>
                        {% endif %}

                        {% if contract.isSigned %}
                            <div class="mb-2">
                                <div class="text-muted small">Sign√© le</div>
                                <div>{{ contract.signedAt|date('d/m/Y √† H:i') }}</div>
                            </div>
                        {% endif %}
                    </div>
                    <div class="card-footer">
                        <div class="d-flex gap-2">
                            <a href="{{ path('app_contracts_show', {'id': contract.id}) }}" class="btn btn-primary btn-sm flex-fill">
                                <i class="fas fa-eye"></i> D√©tails
                            </a>
                            
                            {% if contract.filePath %}
                                <a href="{{ path('app_contracts_download', {'id': contract.id}) }}" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-download"></i> PDF
                                </a>
                            {% endif %}

                            {% if contract.status == 'sent' and not contract.isSigned %}
                                <a href="{{ path('app_contracts_show', {'id': contract.id}) }}#sign" class="btn btn-success btn-sm">
                                    <i class="fas fa-signature"></i> Signer
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty">
            <div class="empty-img"><img src="{{ asset('img/undraw_file_searching.svg') }}" alt="No contracts"></div>
            <p class="empty-title">Aucun contrat disponible</p>
            <p class="empty-subtitle text-muted">
                Vos contrats de pr√™t approuv√©s appara√Ætront ici une fois g√©n√©r√©s par notre √©quipe.
            </p>
            <div class="empty-action">
                <a href="{{ path('app_loan_application_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Faire une demande de pr√™t
                </a>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
<script>
// Auto-refresh every 30 seconds if there are pending contracts
document.addEventListener('DOMContentLoaded', function() {
    const pendingContracts = document.querySelectorAll('.badge.bg-warning');
    if (pendingContracts.length > 0) {
        setTimeout(() => {
            location.reload();
        }, 30000); // 30 seconds
    }
});
</script>
{% endblock %}