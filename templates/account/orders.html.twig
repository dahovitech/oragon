{% extends 'base.html.twig' %}

{% block title %}{{ 'account.orders'|trans }} - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/vendors/datatables.css') }}">
{% endblock %}

{% block body %}
<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>{{ 'account.orders'|trans }}</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('home', {'_locale': app.request.locale}) }}">{{ 'nav.home'|trans }}</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('account_dashboard', {'_locale': app.request.locale}) }}">{{ 'account.dashboard'|trans }}</a></li>
                        <li class="breadcrumb-item active">{{ 'account.orders'|trans }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->

<!-- section start -->
<section class="section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                {{ include('account/_sidebar.html.twig') }}
            </div>
            <div class="col-lg-9">
                <div class="dashboard-content">
                    <div class="dashboard-header">
                        <h3>{{ 'account.my_orders'|trans }}</h3>
                        <p>{{ 'account.orders_description'|trans }}</p>
                    </div>

                    <!-- Filters -->
                    <div class="orders-filters">
                        <form method="get" class="filter-form">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="status">{{ 'order.status'|trans }}</label>
                                        <select name="status" id="status" class="form-control">
                                            <option value="">{{ 'order.all_statuses'|trans }}</option>
                                            <option value="pending" {{ filters.status == 'pending' ? 'selected' : '' }}>{{ 'order.status.pending'|trans }}</option>
                                            <option value="processing" {{ filters.status == 'processing' ? 'selected' : '' }}>{{ 'order.status.processing'|trans }}</option>
                                            <option value="shipped" {{ filters.status == 'shipped' ? 'selected' : '' }}>{{ 'order.status.shipped'|trans }}</option>
                                            <option value="delivered" {{ filters.status == 'delivered' ? 'selected' : '' }}>{{ 'order.status.delivered'|trans }}</option>
                                            <option value="cancelled" {{ filters.status == 'cancelled' ? 'selected' : '' }}>{{ 'order.status.cancelled'|trans }}</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="date_from">{{ 'order.date_from'|trans }}</label>
                                        <input type="date" name="date_from" id="date_from" class="form-control" value="{{ filters.date_from }}">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="date_to">{{ 'order.date_to'|trans }}</label>
                                        <input type="date" name="date_to" id="date_to" class="form-control" value="{{ filters.date_to }}">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>&nbsp;</label>
                                        <div class="filter-buttons">
                                            <button type="submit" class="btn btn-solid btn-sm">{{ 'order.filter'|trans }}</button>
                                            <a href="{{ path('account_orders', {'_locale': app.request.locale}) }}" class="btn btn-outline btn-sm">{{ 'order.clear'|trans }}</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- Orders List -->
                    {% if orders.items|length > 0 %}
                    <div class="orders-list">
                        {% for order in orders.items %}
                        <div class="order-card">
                            <div class="order-header">
                                <div class="order-info">
                                    <h5>
                                        <a href="{{ path('account_order_detail', {'orderNumber': order.orderNumber, '_locale': app.request.locale}) }}" class="order-link">
                                            #{{ order.orderNumber }}
                                        </a>
                                    </h5>
                                    <p class="order-date">{{ order.createdAt|date('d/m/Y H:i') }}</p>
                                </div>
                                <div class="order-status">
                                    <span class="status-badge status-{{ order.status }}">
                                        {{ ('order.status.' ~ order.status)|trans }}
                                    </span>
                                </div>
                                <div class="order-total">
                                    <h4>{{ order.totalAmount|currency(app.request.locale) }}</h4>
                                </div>
                            </div>

                            <div class="order-items">
                                <div class="items-preview">
                                    {% for item in order.items|slice(0, 3) %}
                                    <div class="item-preview">
                                        {% if item.product and item.product.images|first %}
                                            <img src="{{ asset('uploads/products/thumbs/' ~ item.product.images|first.filename) }}" 
                                                 alt="{{ item.productName }}" class="item-image">
                                        {% else %}
                                            <div class="item-placeholder">
                                                <i class="fa fa-image"></i>
                                            </div>
                                        {% endif %}
                                        <div class="item-info">
                                            <p class="item-name">{{ item.productName }}</p>
                                            <p class="item-quantity">{{ 'order.quantity'|trans }}: {{ item.quantity }}</p>
                                        </div>
                                    </div>
                                    {% endfor %}
                                    {% if order.items|length > 3 %}
                                    <div class="more-items">
                                        <span>+{{ order.items|length - 3 }} {{ 'order.more_items'|trans }}</span>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="order-actions">
                                <a href="{{ path('account_order_detail', {'orderNumber': order.orderNumber, '_locale': app.request.locale}) }}" 
                                   class="btn btn-outline btn-sm">
                                    <i class="fa fa-eye"></i>
                                    {{ 'order.view_details'|trans }}
                                </a>
                                
                                {% if order.status in ['delivered', 'completed'] %}
                                    <button type="button" class="btn btn-solid btn-sm reorder-btn" data-order-id="{{ order.id }}">
                                        <i class="fa fa-refresh"></i>
                                        {{ 'order.reorder'|trans }}
                                    </button>
                                {% endif %}
                                
                                {% if order.status == 'pending' %}
                                    <button type="button" class="btn btn-danger btn-sm cancel-order-btn" data-order-id="{{ order.id }}">
                                        <i class="fa fa-times"></i>
                                        {{ 'order.cancel'|trans }}
                                    </button>
                                {% endif %}

                                {% if order.status in ['shipped', 'delivered'] and order.trackingNumber %}
                                    <a href="{{ path('order_tracking', {'orderNumber': order.orderNumber, '_locale': app.request.locale}) }}" 
                                       class="btn btn-info btn-sm">
                                        <i class="fa fa-truck"></i>
                                        {{ 'order.track'|trans }}
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                        {% endfor %}
                    </div>

                    <!-- Pagination -->
                    {% if orders.pageCount > 1 %}
                    <div class="pagination-wrapper">
                        <nav aria-label="Orders pagination">
                            <ul class="pagination justify-content-center">
                                {% if orders.current != 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('account_orders', app.request.query.all|merge({page: orders.current - 1, '_locale': app.request.locale})) }}">
                                        <i class="fa fa-chevron-left"></i>
                                    </a>
                                </li>
                                {% endif %}

                                {% for page in 1..orders.pageCount %}
                                    {% if page == orders.current %}
                                    <li class="page-item active">
                                        <span class="page-link">{{ page }}</span>
                                    </li>
                                    {% elseif page < orders.current + 3 and page > orders.current - 3 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('account_orders', app.request.query.all|merge({page: page, '_locale': app.request.locale})) }}">{{ page }}</a>
                                    </li>
                                    {% endif %}
                                {% endfor %}

                                {% if orders.current != orders.pageCount %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('account_orders', app.request.query.all|merge({page: orders.current + 1, '_locale': app.request.locale})) }}">
                                        <i class="fa fa-chevron-right"></i>
                                    </a>
                                </li>
                                {% endif %}
                            </ul>
                        </nav>
                    </div>
                    {% endif %}
                    {% else %}
                    <!-- Empty orders -->
                    <div class="empty-orders text-center">
                        <img src="{{ asset('assets/images/icon/empty-orders.png') }}" class="img-fluid mb-4 mx-auto" alt="{{ 'order.no_orders'|trans }}">
                        <h3>{{ 'order.no_orders_title'|trans }}</h3>
                        <p>{{ 'order.no_orders_message'|trans }}</p>
                        <a href="{{ path('catalog_index', {'_locale': app.request.locale}) }}" class="btn btn-solid">{{ 'order.start_shopping'|trans }}</a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>
<!-- section end -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            // Reorder functionality
            $('.reorder-btn').on('click', function() {
                const orderId = $(this).data('order-id');
                const button = $(this);
                
                if (confirm('{{ 'order.confirm_reorder'|trans }}')) {
                    button.prop('disabled', true).html('<i class="fa fa-spinner fa-spin"></i> {{ 'order.processing'|trans }}');
                    
                    $.ajax({
                        url: '{{ path('account_reorder', {'_locale': app.request.locale}) }}',
                        method: 'POST',
                        data: { order_id: orderId },
                        success: function(data) {
                            if (data.success) {
                                toastr.success('{{ 'order.reorder_success'|trans }}');
                                window.location.href = data.redirect_url || '{{ path('cart_index', {'_locale': app.request.locale}) }}';
                            } else {
                                toastr.error(data.message || '{{ 'error.generic'|trans }}');
                                button.prop('disabled', false).html('<i class="fa fa-refresh"></i> {{ 'order.reorder'|trans }}');
                            }
                        },
                        error: function() {
                            toastr.error('{{ 'error.generic'|trans }}');
                            button.prop('disabled', false).html('<i class="fa fa-refresh"></i> {{ 'order.reorder'|trans }}');
                        }
                    });
                }
            });

            // Cancel order functionality
            $('.cancel-order-btn').on('click', function() {
                const orderId = $(this).data('order-id');
                const button = $(this);
                
                if (confirm('{{ 'order.confirm_cancel'|trans }}')) {
                    button.prop('disabled', true).html('<i class="fa fa-spinner fa-spin"></i> {{ 'order.cancelling'|trans }}');
                    
                    $.ajax({
                        url: '{{ path('account_cancel_order', {'_locale': app.request.locale}) }}',
                        method: 'POST',
                        data: { order_id: orderId },
                        success: function(data) {
                            if (data.success) {
                                toastr.success('{{ 'order.cancel_success'|trans }}');
                                location.reload();
                            } else {
                                toastr.error(data.message || '{{ 'error.generic'|trans }}');
                                button.prop('disabled', false).html('<i class="fa fa-times"></i> {{ 'order.cancel'|trans }}');
                            }
                        },
                        error: function() {
                            toastr.error('{{ 'error.generic'|trans }}');
                            button.prop('disabled', false).html('<i class="fa fa-times"></i> {{ 'order.cancel'|trans }}');
                        }
                    });
                }
            });
        });
    </script>
{% endblock %}

