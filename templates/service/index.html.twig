{% extends 'base.html.twig' %}

{% block title %}{{ 'services.title'|trans({}, 'messages') }} - Oragon{% endblock %}

{% block meta_description %}{{ 'services.meta_description'|trans({}, 'messages') }}{% endblock %}

{% block breadcrumb %}
<div class="bg-light py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="{{ path('homepage', {'_locale': app.request.locale}) }}">
                        <i class="fas fa-home"></i> {{ 'navigation.home'|trans({}, 'messages') }}
                    </a>
                </li>
                <li class="breadcrumb-item active">{{ 'services.title'|trans({}, 'messages') }}</li>
            </ol>
        </nav>
    </div>
</div>
{% endblock %}

{% block content %}
<div class="container my-5">
    <!-- En-tête de la page -->
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 mb-3">{{ 'services.title'|trans({}, 'messages') }}</h1>
            <p class="lead text-muted">{{ 'services.subtitle'|trans({}, 'messages') }}</p>
            
            <!-- Informations sur la langue courante -->
            {% if current_language %}
                <div class="alert alert-info d-inline-block">
                    <i class="fas fa-info-circle me-2"></i>
                    {{ 'services.viewing_in'|trans({'%language%': current_language.name}, 'messages') }}
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Barre de recherche -->
    <div class="row mb-4">
        <div class="col-md-6 mx-auto">
            <form method="get" action="{{ path('service_search', {'_locale': app.request.locale}) }}" class="d-flex">
                <input type="text" name="q" class="form-control me-2" 
                       placeholder="{{ 'services.search_placeholder'|trans({}, 'messages') }}"
                       value="{{ app.request.query.get('q', '') }}">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
    </div>

    <!-- Liste des services -->
    {% if services|length > 0 %}
        <div class="row">
            {% for service in services %}
                {% set hasTranslation = service.getTranslation(app.request.locale) %}
                {% set isTranslationComplete = hasTranslation ? hasTranslation.isComplete : false %}
                
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card service-card h-100">
                        <!-- Image du service -->
                        {% if service.image %}
                            <img src="{{ asset('upload/media/' ~ service.image.fileName) }}" 
                                 class="card-img-top service-image" 
                                 alt="{{ service.image.alt }}">
                        {% else %}
                            <div class="card-img-top service-image d-flex align-items-center justify-content-center">
                                <i class="fas fa-cogs fa-3x text-white"></i>
                            </div>
                        {% endif %}

                        <div class="card-body service-content d-flex flex-column">
                            <!-- Alerte si traduction incomplète -->
                            {% if not isTranslationComplete %}
                                <div class="alert alert-warning alert-sm mb-3">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    <small>{{ 'services.translation_incomplete'|trans({}, 'messages') }}</small>
                                </div>
                            {% endif %}

                            <h5 class="card-title service-title">
                                {{ service.title ?? service.slug }}
                            </h5>
                            
                            {% if service.description %}
                                <p class="card-text service-description flex-grow-1">
                                    {{ service.description|slice(0, 150) }}
                                    {% if service.description|length > 150 %}...{% endif %}
                                </p>
                            {% endif %}

                            <div class="mt-auto">
                                <a href="{{ path('service_show', {'_locale': app.request.locale, 'slug': service.slug}) }}" 
                                   class="btn btn-primary">
                                    {{ 'services.read_more'|trans({}, 'messages') }}
                                    <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>

                        <!-- Indicateurs de langue en bas de carte -->
                        {% if service.availableLocales|length > 1 %}
                            <div class="card-footer bg-light">
                                <small class="text-muted">
                                    {{ 'services.available_in'|trans({}, 'messages') }}:
                                    {% for locale in service.availableLocales %}
                                        {% set localeService = service.getTranslation(locale) %}
                                        {% if localeService and localeService.isComplete %}
                                            <span class="badge bg-success me-1">{{ locale|upper }}</span>
                                        {% else %}
                                            <span class="badge bg-secondary me-1">{{ locale|upper }}</span>
                                        {% endif %}
                                    {% endfor %}
                                </small>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Pagination (à implémenter si nécessaire) -->
        {% if services|length >= 12 %}
            <div class="row mt-4">
                <div class="col-12 text-center">
                    <p class="text-muted">{{ 'services.showing_count'|trans({'%count%': services|length}, 'messages') }}</p>
                </div>
            </div>
        {% endif %}
    {% else %}
        <!-- Aucun service trouvé -->
        <div class="row">
            <div class="col-12 text-center py-5">
                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                <h3 class="text-muted">{{ 'services.no_services_found'|trans({}, 'messages') }}</h3>
                <p class="text-muted">{{ 'services.no_services_message'|trans({}, 'messages') }}</p>
                
                {% if app.request.query.get('q') %}
                    <a href="{{ path('service_index', {'_locale': app.request.locale}) }}" class="btn btn-outline-primary">
                        {{ 'services.view_all'|trans({}, 'messages') }}
                    </a>
                {% endif %}
            </div>
        </div>
    {% endif %}

    <!-- Call to action -->
    <div class="row mt-5">
        <div class="col-12 text-center">
            <div class="bg-light p-4 rounded">
                <h4>{{ 'services.cta_title'|trans({}, 'messages') }}</h4>
                <p class="mb-3">{{ 'services.cta_description'|trans({}, 'messages') }}</p>
                <a href="#contact" class="btn btn-primary">
                    {{ 'services.cta_button'|trans({}, 'messages') }}
                    <i class="fas fa-envelope ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
.service-card .alert-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
}

.badge {
    font-size: 0.7em;
}

.service-card .card-footer {
    border-top: 1px solid #dee2e6;
}

@media (max-width: 768px) {
    .service-image {
        height: 150px;
    }
    
    .display-4 {
        font-size: 2rem;
    }
}
</style>
{% endblock %}
